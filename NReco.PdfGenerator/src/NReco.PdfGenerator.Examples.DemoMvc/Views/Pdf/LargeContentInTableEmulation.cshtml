@model System.Collections.IDictionary
<html>
	<head>
		<style>
			p {
				page-break-inside:auto;
			}
			div.row {
				clear:both;
				overflow: hidden;
			}
			div.col {
				border-top:1px solid gray;
				float:left;				
			}
			div.col:last-child {
				border-bottom: 1px solid gray;
			}
				div.col .contentWrapper {
					border-left:1px solid gray;
					padding-bottom: 5000em;
					margin-bottom: -5000em;
				}
					div.col .contentWrapper:last-child {
						border-right:1px solid gray;
					}
			
		</style>
	</head>
<body style="margin:0px;" onload="calcHeight()">
	<!-- special "header" tag is used by PdfResultAttribute as header HTML content -->
	<div style="display:none;">
		<header>
			<div style="background-color:silver;font-weight:bold;width:100%;">
				<div style="width:20%;float:left;">
					<div style="border:1px solid gray;">
						Column 1
					</div>
				</div>
				<div style="width:30%;float:left;">
					<div style="border:1px solid gray;border-left:0px;">
						Column 2
					</div>
				</div>
				<div style="width:50%;float:left;">
					<div style="border:1px solid gray;border-left:0px;">
						Last Column
					</div>
				</div>
				<div style="clear:both;"></div>
			</div>
		</header>
	</div>


			@for (int i = 0; i < 40; i++) {
				<div class="row">
					<div class="col" style="width:20%;">
						<div class="contentWrapper">Col_1 Short Value</div>
					</div>
					<div class="col" style="width:30%;"><div class="contentWrapper">Col_2 Short Value</div></div>
					<div class="col" style="width:50%;">
						<div class="contentWrapper">
						@for (int j = 0; j < (i % 10 == 1 ? 10 : 100); j++) {
							<text><span>Long Value @j </span></text>
						}
						</div>
					</div>
				</div>
			}


	<script type="text/javascript">
		function calcHeight() {
			var rows = document.getElementsByClassName('row');
			Array.prototype.forEach.call(rows, function (row) {
				var children = row.getElementsByClassName('col');
				var maxHeight = 0;
				for (var i = 0; i < children.length; i++) {
					var h = children[i].scrollHeight;
					if (h > maxHeight)
						maxHeight = h;
				}

				for (var i = 0; i < children.length; i++) {
					if (children[i].nodeName.toLowerCase() == 'div') {
						//children[i].getElementsByClassName('contentWrapper')[0].style.height = maxHeight+"px";
					}
				}
			});
		}
	</script>

</body>
</html>

