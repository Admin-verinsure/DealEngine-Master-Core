            var postData = JSON.stringify(mergedData);

            console.log(mergedData);
            console.log(postData);

            debugger;

            $.ajax({ url: "/Milestone/SubmitMilestone", type: "POST", contentType: "application/json; charset=utf-8", data: postData })
                .done(function (json) {
                    NextTab();
                })
                .fail(function (err) {
                    alert("Unable to save." + err.responseText);
                });
        }
    </script>
}