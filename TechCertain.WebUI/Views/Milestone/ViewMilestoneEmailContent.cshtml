    <select class="form-control b" id="Emailaddress" required>
        <option selected="selected" value="">-- Select --</option>
        @foreach (var emailAdd in Model.EmailAddresses)
        {
            <option value="@emailAdd.Value"> @emailAdd.Text</option>
        }
    </select>
</div>

<div class="form-group">
    @Html.TextAreaFor(m => m.EmailTemplate.Subject, new { cols = "100", @class="form-control", @placeholder = "Enter email subject" })
</div>

<div class="form-group">
    @Html.TextAreaFor(m => m.EmailTemplate.Body, new { id = "emailTemplate", @class="form-control", name = "content", cols = "10", rows = "10", @placeholder = "Enter email body" })
</div>


