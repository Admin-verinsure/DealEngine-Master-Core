@model TechCertain.WebUI.Models.Milestone.MilestoneBuilderViewModel

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                @Html.TextAreaFor(m => m.AdvisoryContent.Advisory, new { id = "advisory", name = "content", cols = "100", rows = "10", @placeholder = "Enter Advisory" })
            </div>
        </div>
    </div>

<script type="text/javascript">
    ClassicEditor
        .create(document.querySelector('#advisory'))
        .then(newAdvisory => {
            editorAdvisory = newAdvisory;
        })
        .catch(error => {
            console.error(error);
        });

    function GetAdvisoryContentJson() {

        return {
            Advisory: editorAdvisory.getData()
        };
    }
</script>
