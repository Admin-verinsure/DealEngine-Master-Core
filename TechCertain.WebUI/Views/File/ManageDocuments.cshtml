@model BaseListViewModel<TechCertain.WebUI.Models.DocumentInfoViewModel>

<!-- MAIN CONTENT -->
    <div id="content" class="container">

        <div class="row">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-home"></i>  <span>
                    <a href="~/Home/Index"> Dashboard</a>
                    > My Documents
                </span>
            </h1>
        </div>
        <div class="row">
            <span>
                <a onclick="location.href='@Url.Action("Index", "Home")'" style="color:dodgerblue;font-size:30px; cursor:pointer"> <span _ngcontent-c7="" class="icon-append fa fa-arrow-circle-left"></span>  </a>
            </span>
        </div>
        <!-- widget grid -->
        <section id="widget-grid" class="">
            <div class="row">
                <article class="container">
                    <!-- new widget -->
                    <div class="jarviswidget jarviswidget-color-blue" id="wid-id-2"
                         data-widget-editbutton="false" data-widget-colorbutton="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-comments txt-color-white"></i> </span>
                            <h2> My Documents </h2>

                        </header>
                        <div>
                            <!-- end widget edit box -->
                            <div class="widget-body widget-hide-overflow no-padding">
                                <!-- content goes here -->
                                <table class="table table-striped table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Product</th>
                                            <th>Type</th>
                                            <th>Owner</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var doc in Model)
                                        {
                                            <tr>
                                                <td>@doc.DisplayName</td>
                                                <td>@doc.ProductName</td>
                                                <td>@doc.Type</td>
                                                <td>@doc.Owner</td>
                                                <td>
                                                    <a class="btn btn-primary btn-xs" href="/File/GetDocument/@(doc.Id)">Get Html</a>
                                                    <a class="btn btn-primary btn-xs" href="/File/GetDocument/@(doc.Id)?format=docx">Get Docx</a>
                                                    @if (User.HasClaim("EditManageDocuments", "EditManageDocuments"))
                                                    {
                                                        <a class="btn btn-primary btn-xs" href="/File/CreateDocument/@(doc.Id)">Update</a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <!-- end content -->
                            </div>
                        </div>
                        <!-- end widget div -->
                    </div>
                    <!-- end widget -->
                </article>
            </div>
        </section>
        <!-- end widget grid -->
    </div>
<!-- END MAIN CONTENT -->