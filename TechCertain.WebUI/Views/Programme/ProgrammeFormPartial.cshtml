@model TechCertain.WebUI.Models.Programme.ProgrammeInfoViewModel

<section id="widget-grid" class="container-fluid">
    <!-- end row -->
    <!-- row -->
    <form method="POST" id="update-form" class="smart-form client-form" enctype="multipart/form-data">
        <fieldset>

            <section class="col col-3">
                <label class="label required"><strong>Programme Name: </strong></label>
            </section>
            <section class="col col-9">
                <label class="input">
                    <i class="icon-append fa fa-edit"></i>
                    @Html.TextBoxFor(m => m.programmeName)
                </label>
            </section>

            <section class="col col-3">
                <label class="label required"><strong>Tax Rate: </strong></label>
            </section>
            <section class="col col-9">
                <label class="input">
                    <i class="icon-append fa fa-edit"></i>
                    @Html.TextBoxFor(m => m.TaxRate)
                </label>
            </section>

            <section class="col col-3">
                <label class="label required"><strong>Policy Number Prefix String: </strong></label>
            </section>
            <section class="col col-9">
                <label class="input">
                    <i class="icon-append fa fa-edit"></i>
                    @Html.TextBoxFor(m => m.PolicyNumberPrefixString)
                </label>
            </section>

            <section class="col col-3">
            </section>
            <section class="col col-9">
                <label class="checkbox">
                    @Html.CheckBoxFor(m => m.UsesEGlobal)
                    <i></i>I want this programme to use EGlobal API.
                </label>
            </section>

            <section class="col col-3">
            </section>
            <section class="col col-9">
                <label class="checkbox">
                    @Html.CheckBoxFor(m => m.IsPublic)
                    <i></i>I want this programme to be publicly available.
                </label>
            </section>

            <section class="col col-3">
            </section>
            <section class="col col-9">
                <label class="checkbox">
                    @Html.CheckBoxFor(m => m.StopAgreement)
                    <i></i>I want this programme to suspend all agreements.
                </label>
            </section>

            <section class="col col-3">
            </section>
            @if (User.HasClaim("EditProgramme", "EditProgramme"))
            {
                <section class="col col-9">
                    <button type="submit" class="btn btn-success"> Save</button>                    
                </section>
            }

        </fieldset>
    </form>

    <!-- end row -->
</section>