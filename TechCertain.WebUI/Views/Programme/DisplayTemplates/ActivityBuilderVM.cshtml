@model TechCertain.WebUI.Models.Programme.ActivityBuilderVM


<div class="tab-pane active" id="tab1">
    <br />
    <h3><strong>Setup </strong> - New Business Activity</h3>
    <div class="row">
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label><strong>Public Activities</strong></label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-file-text fa-lg fa-fw"></i></span>
                    <select class="cselect form-control" data-placeholder="Activities" id="Activities" multiple="multiple" name="@Html.NameFor(m => m.SelectedActivities)" style="display: none;" >
                        @foreach (var Activity in Model.Activities)
                        {
                            <option value="@Activity.Value">@Activity.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <div class="smart-form">
                    <div class="input-group">
                        <label class="button">
                            <button onclick="ShowActivityModel()" class="btn-md" id="ShowActivity">Add Custom Business Activity</button>
                            @*@Html.Bootstrap().Button().Text("").HtmlAttributes(new { onclick = "ShowActivityModel();" }).Class("btn-md")*@
                            <i></i>Add Custom Business Activity
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <div class="smart-form">
                    <label class="checkbox">
                        @Html.CheckBoxFor(m => m.Ispublic)
                        <i></i>I want these Activity to be publicly available.
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>


