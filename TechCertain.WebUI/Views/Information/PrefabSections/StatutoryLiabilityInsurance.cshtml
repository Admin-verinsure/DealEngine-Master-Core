@model TechCertain.WebUI.Models.InformationViewModel
<div class="padding-10">
    <div id="DNOForm" class="smart-form" novalidate="novalidate">
        <fieldset id="StatutoryLiabilityInsurance">
            <div class="row">


                <div class="panel-body" id="@Model.Id body">

                    <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">

                        <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <label class="label required">
                                Would you like Statutory Liability Insurance?
                            </label>
                        </section>
                        <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <label class="input">
                                <select id="StatutoryLiability1" onchange="StatutoryLiability1Selected('StatutoryLiability1')" class="form-control rmv editable" name="StatutoryLiability1">
                                    <option selected="selected" value="">-- Select --</option>
                                    <option value="true">Yes</option>
                                    <option value="false">No</option>
                                </select>
                            </label>
                            <p class="validationContainer" id="ValidateStatutoryLiability1"></p>

                        </section>

                    </section>


                    <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12 hidden" id="StatutoryLiability2Sec">

                        <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <label class="label required">
                                Is this a renewal of an existing policy placed with NZACS?
                            </label>
                        </section>
                        <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <label class="input">
                                <select id="StatutoryLiability2" onchange="StatutoryLiability2Selected('StatutoryLiability2')" class="form-control rmv editable" name="StatutoryLiability2">
                                    <option selected="selected" value="">-- Select --</option>
                                    <option value="true">Yes</option>
                                    <option value="false">No</option>
                                </select>
                            </label>
                            <p class="validationContainer" id="ValidateStatutoryLiability2"></p>

                        </section>

                    </section>

                    <div class="hidden" id="PreviousInsuranceSec">
                        <h3 style="font-size:15px;font-weight:bold;color:black">Details of Previous Insurance</h3>
                        <br/>

                        <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="label required">
                                    $ Amount of Cover:
                                </label>
                            </section>

                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="input form-group">
                                    <i></i>
                                    <input class="form-control b" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency" data-name="StatutoryLiability3" id="StatutoryLiability3" name="StatutoryLiability3" placeholder="$ Amount of Cover" value="" required>
                                </label>
                                <p class="validationContainer" id="ValidateStatutoryLiability3"></p>

                            </section>

                        </section>

                        <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="label required">
                                    When Lapsed:
                                </label>
                            </section>
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="input form-group">
                                    <label class="input ">
                                        <i class="icon-append fa fa-calendar"></i>
                                        <input name="StatutoryLiability4" placeholder="Lapsed Date" class="datepicker form-control b" data-dateformat="dd/mm/yy" id="StatutoryLiability4" type="text">
                                    </label>
                                </label>
                                <p class="validationContainer" id="ValidateStatutoryLiability4"></p>

                            </section>

                        </section>

                        <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="label required">
                                    Name of Insurer:
                                </label>
                            </section>
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="input form-group">
                                    <i></i>
                                    <input class="form-control b form-group" type="text" data-type="TEXTBOX" id="StatutoryLiability5" name="StatutoryLiability5" placeholder="Insurer Name" value="" required>
                                </label>
                                <p class="validationContainer" id="ValidateStatutoryLiability5"></p>

                            </section>

                        </section>

                        <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="label required">
                                    Retroactive date:
                                </label>
                            </section>
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="input form-group">
                                    <label class="input ">
                                        <i class="icon-append fa fa-calendar"></i>
                                        <input name="StatutoryLiability6" placeholder="Retroactive Date" class="datepicker form-control b" data-dateformat="dd/mm/yy" id="StatutoryLiability6" type="text">
                                    </label>
                                </label>
                                <p class="validationContainer" id="ValidateStatutoryLiability6"></p>

                            </section>

                        </section>

                    </div>

                </div>
            </div>

            @*<button onclick="ValidateStatutory(); event.preventDefault();" class="btn-sm AddupdateBoat" id="updateBoat">Update</button>*@

        </fieldset>
    </div>
</div>


<script type="text/javascript">

    $(window).on("load", function () {
        var clientInformationSheet = $('#AnswerSheetId').val();
        var postData = { ClientInformationSheet: clientInformationSheet };
        $.ajax({
            url: '@Url.Action("GetStatutoryLiability", "Information")',
            type: "POST",
            data: postData
        })
            .done(function (data) {
                var valid = "true";
                var count = 0;
                for (var i = 0; i < data.length - 5; i++) {
                    if (data[i] == null) {
                        if (valid) {
                            valid = "false";
                        }
                    }                    
                }                
                if (data[0] != "" && valid == "true") {
                    for (var item = 0; item < data.length - 4; item++){
                        var arr = data[item];
                        debugger;
                        if (arr != null) {
                            $('#' + arr[count]).val(arr[count + 1]);
                            if ($('#StatutoryLiability1').val() == 'true') {
                                $('#StatutoryLiability2Sec').removeClass('hidden');
                            } else {
                                $('#StatutoryLiability2Sec').addClass('hidden');
                            }
                            if ($('#StatutoryLiability2').val() == 'false') {
                                $('#PreviousInsuranceSec').removeClass('hidden');
                            } else {
                                $('#PreviousInsuranceSec').addClass('hidden');
                            }
                        }                                               
                    }
                };
            })
            .fail(function (a, s, d) {
                debugger;
                alert("Unable to save.");
            });
    });

    function StatutoryLiability1Selected(StatutoryLiability) {
        var statutoryLiability = document.getElementById(StatutoryLiability);
        var vhh = statutoryLiability.options[statutoryLiability.selectedIndex].value;

        if (statutoryLiability.options[statutoryLiability.selectedIndex].value == "true") {
            $('#StatutoryLiability2Sec').removeClass('hidden');
        } else {
            $('#StatutoryLiability2').val('');
             $('#StatutoryLiability3').val('');
            $('#StatutoryLiability4').val('');
            $('#StatutoryLiability5').val('');
            $('#StatutoryLiability6').val('');
            $('#PreviousInsuranceSec').addClass('hidden');
            $('#StatutoryLiability2Sec').addClass('hidden');
        }
    }

    function StatutoryLiability2Selected(StatutoryLiability) {
        debugger;

        var statutoryLiability = document.getElementById(StatutoryLiability);
        var vhh = statutoryLiability.options[statutoryLiability.selectedIndex].value;

        if (statutoryLiability.options[statutoryLiability.selectedIndex].value == "false") {
            $('#PreviousInsuranceSec').removeClass('hidden');
        } else {
            $('#StatutoryLiability3').val('');
            $('#StatutoryLiability4').val('');
            $('#StatutoryLiability5').val('');
            $('#StatutoryLiability6').val('');
            $('#PreviousInsuranceSec').addClass('hidden');
        }
    }

    var clientInformationSheet = $('#AnswerSheetId').val();

