        } else {
            $('#ValidateStatutoryLiability4').html("<i></i>");
          }
          if (GLI5 == "" && GLI2 == 'false') {
            $('#ValidateStatutoryLiability5').html("<font color='red'>Field is required</font>")
            if (validity) {
                validity = false;
            }
        } else {
            $('#ValidateStatutoryLiability5').html("<i></i>");
          }
          if (GLI6 == "" && GLI2 == 'false') {
