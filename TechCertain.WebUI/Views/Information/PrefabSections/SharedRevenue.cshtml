@model TechCertain.WebUI.Models.InformationViewModel



<div id="SharedRevenue">

    <ul id="sharedRevenTabs" class="nav nav-tabs d-sm-flex">
        <li class="nav nav-tabs Territory"> <a href="#RevenueTabs1" data-toggle="tab"> Territory </a> </li>
        <li class="nav nav-tabs Activities"> <a href="#RevenueTabs2" data-toggle="tab"> Activities </a> </li>
        <li class="nav nav-tabs TerritoryBreakdown"> <a href="#RevenueTabs3" data-toggle="tab"> Territory Breakdown </a> </li>
        <li class="nav nav-tabs ActivityBreakdown"> <a href="#RevenueTabs4" data-toggle="tab"> Activity Breakdown </a> </li>
        <li class="nav nav-tabs AdditionalInformation"> <a href="#RevenueTabs5" data-toggle="tab"> Additional Information </a> </li>
    </ul>

    <div id="RevenueTabs1" class="tab-content">
        <fieldset>
            <div class="container-fluid">
                <div class="input-group mb-3">

                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-primary">
                            <input type="radio" name="tradingOption" id="tradingOption1" value=true onchange="toggleTerritoriesVisible('active')"> Yes, I do trade outside of New Zealand
                        </label>
                        <label class="btn btn-primary">
                            <input type="radio" name="tradingOption" id="tradingOption2" value=false onchange="toggleTerritoriesVisible('Inactive')"> No, I don't trade outside of New Zealand
                        </label>
                    </div>

                </div>
                <div class="input-group mb-3" id="sharedRevenueTerritories" name="sharedRevenueTerritories" style="display:none">
                    <label for="SharedTerritories">Select Territories</label>
                    <select data-placeholder="Choose Territories" id="SharedTerritories" name="Territories" multiple class="col-6 chosen-select form-control b" required>
                        @foreach (var territory in Model.RevenueByActivityViewModel.Territories)
                        {
                            <option selected="@territory.Selected" value="@territory.Value">@territory.Text</option>
                        }
                    </select>
                </div>

                <div class="input-group mb-3">
                    <button class="btn-primary btn" id="tradingButton" onclick="SaveRevenueTabOne()" style="display:none">  Next  </button>
                </div>
            </div>

        </fieldset>
    </div>
    <div id="RevenueTabs2" class="tab-content">

        <fieldset>
            <div class="container-fluid">
                <div class="input-group mb-3">
                    <label for="sharedRevenueActivities">Select Activites</label>
                    <select id="sharedRevenueActivities" name="sharedRevenueActivities" multiple class="col-6 chosen-select form-control b" data-placeholder="Choose Activities" required>
                        @foreach (var ou in Model.RevenueByActivityViewModel.Activities)
                        {
                            <option selected="@ou.Selected" value="@ou.Value">@ou.Text</option>
                        }
                    </select>
                </div>

                <div id="sharedRevenueTerritoriesBreakdownTab" class="input-group mb-3">
                    <button class="btn-primary btn" onclick="SaveRevenueTabTwo('true')">Next</button>
                </div>

            </div>
        </fieldset>
    </div>
    <div id="RevenueTabs3" class="tab-content">
        <fieldset>
            <div class="container-fluid">
                <div class="input-group mb-3">
                    <table id="sharedRevenueTerritoriesTable" class="table">
                        @if (Model.RevenueByActivityViewModel.RevenueData != null)
                        {
                            <thead>
                                <tr>

                                    @foreach (var territoryData in Model.RevenueByActivityViewModel.RevenueData.Territories)
                                    {
                                        <th scope="col">@territoryData.Location</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @foreach (var territoryData in Model.RevenueByActivityViewModel.RevenueData.Territories)
                                    {
                                        <th scope="row">
                                            <input class="form-control" type="text" name="@territoryData.Id" id="@territoryData.Id" maxlength="3" value="@territoryData.Pecentage.ToString("0.00").Replace(".00", String.Empty)">
                                        </th>
                                    }
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>

                <div class="input-group mb-3">
                    <div id="sharedRevenueActivity" class="input-group">
                        <button class="btn-primary btn" onclick="SaveRevenueTabThree('false')">Next</button>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div id="RevenueTabs4" class="tab-content">

        <fieldset>
            <div class="container-fluid">
                <div class="input-group mb-3">
                    <label for="totalRevenue">Enter Total Revenue</label>
                    <input id="totalRevenue" name="totalRevenue" type="number" class="form-control" value="@Model.RevenueByActivityViewModel.TotalRevenue.ToString("0.00").Replace(".00", String.Empty)" placeholder="10000" required>
                </div>
                <div class="input-group mb-3">
                    <table id="sharedRevenueActivityTable" class="table">
                        @if (Model.RevenueByActivityViewModel.RevenueData != null)
                        {
                            <thead>
                                <tr>
                                    @foreach (var businessActivityData in Model.RevenueByActivityViewModel.RevenueData.Activities)
                                    {
                                        <th scope="col">@businessActivityData.Description</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @foreach (var businessActivityData in Model.RevenueByActivityViewModel.RevenueData.Activities)
                                    {
                                        <th scope="row">
                                            <input class="form-control" type="text" name="@businessActivityData.Id" id="@businessActivityData.Id" maxlength="3" value="@businessActivityData.Pecentage.ToString("0.00").Replace(".00", String.Empty)">
                                        </th>
                                    }
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
                <div class="input-group mb-3">
                    <div class="footer" id="submitTab4">
                        <input type="submit" value="Submit" class="btn btn-success" id="btnSharedRevenueSubmit" onclick="SaveRevenueTabFour('false')">
                    </div>
                    <div class="footer" id="additionalInfomation" style="display:none">
                        <button class="btn-primary btn" onclick="SaveRevenueTabFour('true')">Next</button>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div id="RevenueTabs5" class="tab-content">
        <fieldset>
            <div class="container-fluid">
                <form id="addtionalActivityInformationContainer" action="#" class="client-form">

                    <div class="form-group" style="display:none" id="InspectionReport">
                        <div class="row-fluid">
                            <label for="InspectionReportTextId">Please describe the nature of these reports and what they would be used for, (examples. Domestic pre-purchase property inspections, Commercial building Inspections for Earthquake Strengthening, Inspections relating to Building Feasibility reports)</label>
                            <textarea id="InspectionReportTextId" name="InspectionReportTextId" class="form-control">@Model.RevenueByActivityViewModel.TotalRevenue</textarea>
                        </div>

                        <div class="row-fluid">
                            <label for="InspectionReportBoolId">Do you include limitations of liability clauses and liability disclaimers in your reports/contracts of Engagement? </label>
                            <select class="custom-select" id="InspectionReportBoolId" name="InspectionReportBoolId">
                                <option selected value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group" style="display:none" id="Valuation">
                        <div class="row-fluid">
                            <label for="ValuationTextId">Please state the types of Valuations provided, (examples. Domestic replacement valuation for insurance, Insurance valuation for Historic buildings)</label>
                            <textarea id="ValuationTextId" name="ValuationTextId" class="form-control"></textarea>
                            </div>

                        <div class="row-fluid">
                            <label for="ValuationTextId2">Please provide details of the relevant qualifications held by the persons undertaking this Discipline</label>
                            <textarea id="ValuationTextId2" name="ValuationTextId2" class="form-control"></textarea>
                        </div>
                        <div class="row-fluid">
                            <label for="ValuationBoolId">Do you include limitations of liability clauses and liability disclaimers in your reports? </label>
                            <select class="custom-select" id="ValuationBoolId" name="ValuationBoolId">
                                <option selected value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                    </div>                    
                    
                    <div class="form-group" style="display:none" id="SchoolsDesignWork">
                        <div class="row-fluid">
                            <label for="SchoolsDesignWork">Please also advise whether your practice:</label>
                        </div>
                        <div class="row-fluid">
                            <label for="SchoolsDesignWorkBoolId">Was contracted to provide construction management or observation services?</label>
                            <select class="custom-select" id="SchoolsDesignWorkBoolId" name="SchoolsDesignWorkBoolId">
                                <option selected value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                        <div class="row-fluid">                            
                            <label for="SchoolsDesignWorkBoolId2">Recommended the use of any cladding product? </label>
                            <select class="custom-select" id="SchoolsDesignWorkBoolId2" name="SchoolsDesignWorkBoolId2">
                                <option selected value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                        <div class="row-fluid">
                            <label for="SchoolsDesignWorkBoolId3">Has undertaken in the past 10 years any work on Ministry of Education State Schools (i.e Not Private, Integrated or Designated Character Schools)? </label>
                            <select class="custom-select" id="SchoolsDesignWorkBoolId3" name="SchoolsDesignWorkBoolId3">
                                <option selected value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                        <div class="row-fluid">
                            <label for="SchoolsDesignWorkBoolId4">Issued practical completion certificates? </label>
                            <select class="custom-select" id="SchoolsDesignWorkBoolId4" name="SchoolsDesignWorkBoolId4">
                                <option selected value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group" style="display:none" id="OtherActivities">
                        <div class="row-fluid">
                            <label for="OtherActivitiesTextId"> You have specified Other Work not listed above, please provide further details:</label>
                            <textarea id="OtherActivitiesTextId" name="OtherActivitiesTextId" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="form-group" style="display:none" id="CanterburyEarthquakeRebuildWork">
                        <div class="row-fluid">
                            <label for="CanterburyEarthquakeRebuildWorkId"> If you have specified 20% or more of your fee income earned in the next 12 months to come from work related to the Canterbury earthquake rebuild work, please provide details:</label>
                            <textarea id="CanterburyEarthquakeRebuildWorkId" name="CanterburyEarthquakeRebuildWorkId" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="footer">
                            <input type="submit" value="Submit" class="btn btn-success" id="btnSharedRevenueSubmit" onclick="SaveRevenueTabFive()">
                        </div>
                    </div>
                </form>
            </div>
        </fieldset>
    </div>
</div>



