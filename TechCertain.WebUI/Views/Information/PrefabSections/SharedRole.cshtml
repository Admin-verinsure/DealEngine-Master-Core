@model TechCertain.WebUI.Models.InformationViewModel

<div class="padding-10">
    <div id="proposalcreate-form" class="smart-form" novalidate="novalidate" name="sharedRoleForm" onsubmit="return (SharedRoleValidation());">
        @*@using (var tabs = Html.Bootstrap().Begin(new Tabs("roleTabs")))*@
        {
            @*@tabs.Tab("Location")
            @tabs.Tab("Roles")
