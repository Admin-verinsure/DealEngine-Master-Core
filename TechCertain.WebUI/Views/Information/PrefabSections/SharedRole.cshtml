            using (tabs.BeginPanel())
            {
                <fieldset>
                    <section class="col col-xs-12">
                        <label class="label">Do you have offices outside of New Zealand?</label>
                        <div class="inline-group">
                            <label class="radio">
                                <input name="radio-outsideTradeNZ" type="radio" value="yes" onchange="toggleLocationsVisible('active')">
                                <i></i>Yes
                            </label>
                            <label class="radio">
                                <input name="radio-outsideTradeNZ" type="radio" value="no" onchange="toggleLocationsVisible('Inactive')">
                                <i></i>No
                            </label>
                        </div>
                    </section>

                    <section class="col col-xs-12">
                        <div id="RoleLocation" name="RoleLocation" hidden>
                            <label class="label">Locations</label>
                            <label class="input">
                                <select class="cselect form-control" data-placeholder="Locations" id="locationSelect" multiple="multiple" name="locationSelect" style="display: none;" hidden>
                                    @foreach (var location in Model.Locations)
                                    {
                                        <option value="@location.LocationId">@location.Country</option>
                                    }
                                </select>
                            </label>
                        </div>
                    </section>

                    <section id="sharedRole" class="col col-xs-12">
                        <button onclick="SetCurrentTab('roleTabs-2')" class="btn-sm">Go to Roles</button>

                        @*@Html.Bootstrap().Button().Text("Go to Roles").HtmlAttributes(new { onclick = "SetCurrentTab('roleTabs-2');" }).Class("btn-sm")*@
                    </section>
                </fieldset>
            }

            using (tabs.BeginPanel())
            {
                <fieldset>
                    <section class="col col-xs-12">
                        <label class="label">Team Members in Role</label>
                        <label class="input">
                            <select class="cselect form-control" data-placeholder="Roles" id="roleSelect" multiple="multiple" name="roleSelect" style="display: none;">
                                @foreach (var role in Model.RolesByLocation)
                                {
                                    <option value="@role.Role.Id">@role.Role.Title</option>
                                }
                            </select>
                        </label>
                    </section>

                    <section id="roleLocation" class="col col-xs-12">
                        <button class="btn btn-default btn-sm" type="button" onclick="BuildRolesTable();SetCurrentTab('roleTabs-3');">Go To Location Breakdown</button>
                    </section>

                </fieldset>
            }
