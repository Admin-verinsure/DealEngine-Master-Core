@model TechCertain.WebUI.Models.InformationViewModel
<div class="padding-10">
    <div id="DNOForm" class="smart-form" novalidate="novalidate">
        <fieldset id="StatutoryLiabilityInsurance">
            <div class="row">


                <div class="panel-body" id="@Model.Id body">

                    <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">

                        <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <label class="label required">
                                Would you like Employers Liability Insurance?
                            </label>
                        </section>
                        <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <label class="input">
                                <select id="EmployerLiabilityInsurance1" onchange="EmployerLiabilityInsurance1Selected('EmployerLiabilityInsurance1')" class="form-control rmv editable" name="EmployerLiabilityInsurance1">
                                    <option selected="selected" value="">-- Select --</option>
                                    <option value="true">Yes</option>
                                    <option value="false">No</option>
                                </select>
                            </label>
                            <p class="validationContainer" id="ValidateEmployerLiability1"></p>

                        </section>

                    </section>


                    <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12 hidden" id="EmployerLiabilityInsurance2Sec">

                        <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <label class="label required">
                                Is this a renewal of an existing policy placed with NZACS?
                            </label>
                        </section>
                        <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <label class="input">
                                <select id="EmployerLiabilityInsurance2" onchange="EmployerLiabilityInsurance2Selected('EmployerLiabilityInsurance2')" class="form-control rmv editable" name="EmployerLiabilityInsurance2">
                                    <option selected="selected" value="">-- Select --</option>
                                    <option value="true">Yes</option>
                                    <option value="false">No</option>
                                </select>
                            </label>
                            <p class="validationContainer" id="ValidateEmployerLiability2"></p>

                        </section>

                    </section>


                    <div class="hidden" id="EmployersInsuranceSec">
                        <h3 style="font-size:15px;font-weight:bold;color:black">Details of Previous Insurance</h3>
                        <br />

                        <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="label required">
                                    $ Amount of Cover:
                                </label>
                            </section>

                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="input form-group">
                                    <i></i>
                                    <input class="form-control b" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency" data-name="StatutoryLiability3" id="EmployerLiabilityInsurance3" name="EmployerLiabilityInsurance3" placeholder="$ Amount of Cover" value="" required>
                                </label>
                                <p class="validationContainer" id="ValidateEmployerLiability3"></p>

                            </section>

                        </section>

                        <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="label required">
                                    When Lapsed:
                                </label>
                            </section>
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="input form-group">
                                    <label class="input ">
                                        <i class="icon-append fa fa-calendar"></i>
                                        <input name="EmployerLiabilityInsurance4" placeholder="Lapsed Date" class="datepicker form-control b" data-dateformat="dd/mm/yy" id="EmployerLiabilityInsurance4" type="text">
                                    </label>
                                </label>
                                <p class="validationContainer" id="ValidateEmployerLiability4"></p>

                            </section>

                        </section>

                        <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="label required">
                                    Name of Insurer:
                                </label>
                            </section>
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="input form-group">
                                    <i></i>
                                    <input class="form-control b form-group" type="text" data-type="TEXTBOX" id="EmployerLiabilityInsurance5" name="EmployerLiabilityInsurance5" placeholder="Insurer Name" value="" required>
                                </label>
                                <p class="validationContainer" id="ValidateEmployerLiability5"></p>

                            </section>

                        </section>

                        <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="label required">
                                    Retroactive date:
                                </label>
                            </section>
                            <section class="col col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <label class="input form-group">
                                    <label class="input ">
                                        <i class="icon-append fa fa-calendar"></i>
                                        <input name="EmployerLiabilityInsurance6" placeholder="Retroactive Date" class="datepicker form-control b" data-dateformat="dd/mm/yy" id="EmployerLiabilityInsurance6" type="text">
                                    </label>
                                </label>
                                <p class="validationContainer" id="ValidateEmployerLiability6"></p>

                            </section>

                        </section>

                    </div>



                </div>
            </div>

            <button onclick="ValidateEmployer(); event.preventDefault();" class="btn-sm AddupdateBoat" id="updateBoat">Update</button>
            @*<button onclick="SaveEmployerLiability(event,'#DNOForm')" class="btn-sm AddClearBoat" id="ClearBoat">Clear and Cancel</button>*@

        </fieldset>
    </div>
</div>


<script type="text/javascript">

         $(window).on("load", function () {
           var clientInformationSheet = $('#AnswerSheetId').val();
           var postData = {ClientInformationSheet : clientInformationSheet};
            $.ajax({
     	// change back once mono decides to fix
             url: '@Url.Action("GetEmployerLiability", "Information")',
             type: "POST",
             data: postData
             })
                .done(function (data) {
                debugger;
             if (data != "" && (data[0] != null && data[1] != null && data[2] != null && data[3] != null && data[4] != null && data[5] != null)) {
                for (var item = 0; item < data.length; item++){

                  var arr = data[item];
                  var count = 0;
                    $('#' + arr[count]).val(arr[count + 1]);
                    if ($('#EmployerLiabilityInsurance1').val() == 'true') {
                        $('#EmployerLiabilityInsurance2Sec').removeClass('hidden');

                    } else {
                        $('#EmployerLiabilityInsurance2Sec').addClass('hidden');
                    }

                     if ($('#EmployerLiabilityInsurance2').val() == 'false') {
                        $('#EmployersInsuranceSec').removeClass('hidden');

                    } else {
                        $('#EmployersInsuranceSec').addClass('hidden');
                    }
                }
             };

                })
                .fail(function (a, s, d) {
                    debugger;
                  alert("Unable to save.");
                });

         });

     function ValidateEmployer() {
        event.preventDefault();
        var GLI1 = $('#EmployerLiabilityInsurance1').val();
        var GLI2 = $('#EmployerLiabilityInsurance2').val();
        var validity = true;
        if (GLI1 == "") {
            $('#ValidateEmployerLiability1').html("<font color='red'>Field is required</font>")
            if (validity) {
                validity = false;
            }
        } else {
            $('#ValidateEmployerLiability1').html("<i></i>");
        }
        if (GLI2 == "" && GLI1 == 'true') {
            $('#ValidateEmployerLiability2').html("<font color='red'>Field is required</font>")
            if (validity) {
                validity = false;
            }
        } else {
            $('#ValidateEmployerLiability2').html("<i></i>");
         }

          for (var index = 3; index <=6; index++) {
                     var employerLiabilityInsurance = "#EmployerLiabilityInsurance" + index;
                 var value = $(employerLiabilityInsurance).val();
                 var validator = "#ValidateEmployerLiability" + index;

                  if (value == "" && ($('#EmployerLiabilityInsurance2').val()=='false')) {
              $(validator).html("<font color='red'>Field is required</font>")
                if (validity) {
                  validity = false;
                }
                  } else {
                     $(validator).html("<i></i>");
                }

          }


        if (validity) {
            SaveEmployerLiabilityInsurance(); 
        }
    };


    function EmployerLiabilityInsurance1Selected(EmployerLiabilityInsurance) {
        debugger;

        var employerLiabilityInsurance = document.getElementById(EmployerLiabilityInsurance);

        if (employerLiabilityInsurance.options[employerLiabilityInsurance.selectedIndex].value == "true") {
            $('#EmployerLiabilityInsurance2Sec').removeClass('hidden');
        } else {
            $('#EmployerLiabilityInsurance2').val('');
             $('#EmployerLiabilityInsurance3').val('');
            $('#EmployerLiabilityInsurance4').val('');
            $('#EmployerLiabilityInsurance5').val('');
            $('#EmployerLiabilityInsurance6').val('');
            $('#EmployersInsuranceSec').addClass('hidden');
            $('#EmployerLiabilityInsurance2Sec').addClass('hidden');
        }
    }

    function EmployerLiabilityInsurance2Selected(EmployerLiabilityInsurance) {
        debugger;

        var employerLiabilityInsurance = document.getElementById(EmployerLiabilityInsurance);

        if (employerLiabilityInsurance.options[employerLiabilityInsurance.selectedIndex].value == "false") {
            $('#EmployersInsuranceSec').removeClass('hidden');
        } else {
            $('#EmployerLiabilityInsurance3').val('');
            $('#EmployerLiabilityInsurance4').val('');
            $('#EmployerLiabilityInsurance5').val('');
            $('#EmployerLiabilityInsurance6').val('');
            $('#EmployersInsuranceSec').addClass('hidden');
        }
    }


    
       function SaveEmployerLiabilityInsurance() {
            debugger;
                   var EmployerLiability = new Array(6);

                   for (var i = 0; i < EmployerLiability.length; i++) {
                       EmployerLiability[i] = new Array(2);
                   }

            for (var i = 1; i <= 6; i++) {
                for (var j = 0; j < 2; j++) {
                    EmployerLiability[i-1][0] = "EmployerLiabilityInsurance" + i;
                var employerLiability = "#EmployerLiabilityInsurance" + i;
                EmployerLiability[i-1][1] = $(employerLiability).val();
                }

            }

                   var postData = { Answers: EmployerLiability, ClientInformationSheet: clientInformationSheet };

             $.ajax({
                           url: '@Url.Action("UpdateAnswer", "Information")',
                           type: "POST",
                           data: postData
                       })
                           .done(function (data) {

                           })
                           .fail(function (a, s, d) {
                               alert("Unable to save.");
                           });


        }
</script>

