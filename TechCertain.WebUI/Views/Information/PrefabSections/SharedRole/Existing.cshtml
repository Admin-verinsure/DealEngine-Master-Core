@model TechCertain.WebUI.Models.SharedRoleViewModel

<ul id="sharedRoleTabs" class="nav nav-tabs d-sm-flex">
    <li class="nav nav-item"><a href="#sharedRoleTabs1" data-toggle="tab"> Shared Roles </a></li>
    <li class="nav nav-item"><a href="#sharedRoleTabs2" data-toggle="tab"> Shared Roles Breakdown </a></li>
    <li class="nav nav-item"><a href="#sharedRoleTabs3" data-toggle="tab"> Additional Information </a></li>
</ul>

<div id="sharedRoleTabs1" class="tab-content">
    <div class="form-group">
        <select data-placeholder="Choose Shared Role" id="sharedRoleTemplates" name="sharedRoleTemplates" multiple class="col-6 chosen-select form-control b" required>
            @foreach (var role in Model.SharedRoles)
            {
                <option selected="@role.Selected" value="@role.Value">@role.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <button class="btn-primary btn" onclick="SaveRoleTabOne()">  Next  </button>
    </div>
</div>
<div id="sharedRoleTabs2" class="tab-content">
    <div class="form-group">
        <table id="sharedRoleTable" class="table">
            @if (Model.SharedDataRoles.Count != 0)
            {
                <thead>
                    <tr>
                        @foreach (var sharedDataRole in Model.SharedDataRoles)
                        {
                            <th scope="col">@sharedDataRole.Name</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var sharedDataRole in Model.SharedDataRoles)
                        {
                            <th scope="row">
                                <input class="form-control" type="text" name="@sharedDataRole.Id" id="@sharedDataRole.Id" maxlength="3" value="@sharedDataRole.Count">
                            </th>
                        }
                    </tr>
                </tbody>
            }
        </table>
    </div>

    <div class="form-group">
        <div class="footer" id="submitTab1">
            <input type="submit" value="Submit" class="btn btn-success" id="btnSharedRoleSubmit" onclick="SaveRoleTabTwo()">
        </div>
        <div class="footer" id="additionalRoleInfomationBtn" style="display:none">
            <button class="btn-primary btn" onclick="SaveRoleTabTwo(true)">Submit To Save</button>
        </div>
    </div>
</div>
<div id="sharedRoleTabs3" class="tab-content">
    @if (Model.OtherProfessionId != null)
    {
        <div class="form-group">
            <label for="OtherProfessionId">You have specified Other Profession, please provide further details: </label>
            <textarea id="OtherProfessionId" name="OtherProfessionId" type="Text" class="form-control" form="addtionalRoleInformationContainer">@Model.OtherProfessionId</textarea>
        </div>

        <div class="form-group">
            <button class="btn-success btn" type="submit" onclick="SaveRoleTabThree()">  Submit  </button>
        </div>
    }
    else
    {
        <div class="form-group">
            <label for="OtherProfessionId">You have specified Other Profession, please provide further details: </label>
            <textarea id="OtherProfessionId" name="OtherProfessionId" type="Text" class="form-control" form="addtionalRoleInformationContainer"></textarea>
        </div>

        <div class="form-group">
            <button class="btn-success btn" type="submit" onclick="SaveRoleTabThree()">  Submit  </button>
        </div>
    }
</div>