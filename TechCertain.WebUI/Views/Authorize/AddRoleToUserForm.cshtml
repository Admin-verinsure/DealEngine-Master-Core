@model TechCertain.WebUI.Models.Authorization.AuthorizeViewModel

<form>
    <div class="form-group col-6">
        <select class="custom-select form-control" id="AddUser" data-placeholder="Select User">
            @foreach (var user in Model.UserList)
            {
                <option value="@user.Id">@user.UserName</option>
            }
        </select>
    </div>
    <div class="form-group col-6">
        <select class="cselect form-control" data-placeholder="Select Roles to add to User" id="AddUserRoleSelect" multiple="multiple" name="@Html.NameFor(m => m.RoleList)" style="display: none;">            
                @foreach (var role in Model.RoleList)
                {
                    <option value="@role.Id">@role.Name</option>
                }
            </select>
    </div>
    <div class="form-group col-6">
        <button type="button" class="btn btn-primary btn-lg" onclick="SaveRoleToUser()">Save</button>
    </div>
</form>


