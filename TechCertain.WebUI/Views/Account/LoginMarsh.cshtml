@model TechCertain.WebUI.Models.AccountLoginModel
@{
    ViewBag.PageId = "extr-page";
    ViewBag.PageClass = "animated fadeInDown";
}

<div id="content" class="container col-6">
    @*<div class="container">
            <h1 class="txt-color-red login-header-big">@Model.DomainString</h1>
        </div>*@
    <div class="container-fluid">

        <div class="col-sm">
            <div class="card">
                <div class="card-header">
                    <header>
                        Notice
                    </header>
                </div>
                <div class="card-body">
                    <label>If you can't remember your password, please <b>Reset your password</b> below</label>
                </div>
            </div>
        </div>

        <div class="col-sm">
            <form action="~/Account/LoginMarsh" method="POST" id="login-form" class="client-form">
                <div class="card">
                    <div class="card-header">
                        <header>
                            Sign In
                        </header>
                    </div>
                    <div class="card-body">
                        @Html.HiddenFor(m => m.ReturnUrl)
                        @Html.AntiForgeryToken()
                        @if (Html.ViewData.ModelState.ErrorCount != 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                @Html.ValidationSummary()
                            </div>
                        }
                        <input style="display:none" type="text" name="fakeusernameremembered" />
                        <input style="display:none" type="password" name="fakepasswordremembered" autocomplete="off" />

                        <input id="deviceprint" hidden type="text" name="deviceprint" value="" />
                        <div class="form-group">
                            <label for="username">Username (case-sensitive)</label>
                            <input type="text" class="form-control" name="username" id="username" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <div class="note">
                                    <a href="~/Account/ResetPassword"><i class="fa fa-frown-o"></i> Reset your password</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <footer>
                            <button type="submit" id="submitButton" class="btn btn-primary">
                                Sign in
                            </button>
                        </footer>
                    </div>
                </div>

            </form>
        </div>
        <div class="col-sm">
            @{ await Html.RenderPartialAsync("_LoginText"); }
        </div>
    </div>
</div>


@section pagespecific {    
    <script src="~/Scripts/externalparty/hashtable.js"></script>
    <script src="~/Scripts/externalparty/rsa.js"></script>

    <script type="text/javascript">
        $(function () {
            // Validation
            $("#login-form").validate({
                // Rules for form validation
                rules: {
                    username: {
                        required: true,
                        email: false
                    },
                    password: {
                        required: true,
                        minlength: 6,
                        maxlength: 128
                    }
                },

                // Messages for form validation
                messages: {
                    username: {
                        required: 'Please enter your username',
                        username: 'Please enter a VALID username'
                    },
                    password: {
                        required: 'Please enter your password'
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        });
        // display wait modal when we login
        $("#submitButton").click(function () {
            var $valid = $("#login-form").valid();
            debugger;
            if ($valid) {
                $('#loginModal').modal('show');
            }
        });

    </script>
}
