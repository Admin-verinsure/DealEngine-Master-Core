@model TechCertain.WebUI.Models.Policy.ContentSectionVM

<div id="policydocstart-form" class="smart-form" novalidate="novalidate">
    @Html.TextAreaFor(m => m.Content)
    <script>CKEDITOR.replace('@(Html.IdFor(m => m.Content))');</script>
    <footer>
        <button type="button" class="btn btn-next hidden" onclick="NextTab();">
            Continue
            <i class="fa fa-arrow-right"></i>
        </button>
        <button type="button" class="btn btn-prev hidden" onclick="PreviousTab();">
            Back
            <i class="fa fa-arrow-left"></i>
        </button>
    </footer>
</div>

<script type="text/javascript">
    function GetContentJson()
    {
    	return {
    		Content: CKEDITOR.instances["@(Html.IdFor(m => m.Content))"].getData()
    	};
    }
</script>
