        <div class="row">
            <div class="jarviswidget jarviswidget-color-blue container-fluid" id="wid-unlock-user" data-widget-fullscreenbutton="false" data-widget-editbutton="false" data-widget-colorbutton="false">
                <!-- Header Start-->
                <header>
                    <span class="widget-icon"> <i class="fa fa-upload text-white"></i> </span>
                    <h2> Unlock User </h2>
                </header>
                <!-- Header End -->
                <!-- widget div-->
                <form id="unlockUser" class="client-form" action="/Admin/UnlockUser" method="post" novalidate="novalidate">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <td>
                                <label class="label">Enter username of user to be unlocked</label>
                            </td>
                            <td>
                                <label class="input">
                                    <input name="username" type="text" class="form-control">
                                </label>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary">
                                    Unlock
                                </button>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="jarviswidget jarviswidget-color-blue container-fluid" id="wid-payment-gateways" data-widget-fullscreenbutton="false" data-widget-editbutton="false" data-widget-colorbutton="false">

