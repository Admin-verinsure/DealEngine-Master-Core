@section pagespecific {
<!-- PAGE RELATED PLUGIN(S) -->
<link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet"/>
<script src="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
<script src="/Scripts/datatables"></script>

<script type="text/javascript">
$(document).ready(function () {
	$('#tableRoles').DataTable({
		"sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                "t" +
                "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
            	"autoWidth": true
	});

	$.fn.editable.defaults.mode = 'inline';
	$('.editable').each(function() {
		$(this).editable();
	});
});

function ShowCreateModal()
{
	$('#newRoleModal').modal('show');
}

function SaveRole(roleId)
{
	if (confirm("Do you want to update the name and description of this role?") == false)
		return;
	
	var postData = {};
	$('[data-pk="' + roleId + '"]').each(function() {
		console.log(this.name + " " + this.text);
		postData[this.name] = this.text;
	});
	postData['Id'] = roleId;
	console.log(postData);

	$.ajax({
     	// change back once mono decides to fix
        url: '@Url.Action("Edit", "Roles")',
        type: "POST",
	    data: postData
    })
    .done(function (data) {
        $.smallBox({
            title: "Success",
            content: "The role has been updated",
            color: "#5F895F",
            iconSmall: "fa fa-check bounce animated",
            timeout: 4000
        });
    })
    .fail(function (xhr, httpStatusMessage, customErrorMessage) {
        alert(customErrorMessage);
    });
}

function DeleteRole(roleId)
{
	if (confirm("Delete this Role?") == false)
		return;
	
	$.ajax({
     	// change back once mono decides to fix
        url: '@Url.Action("Delete", "Roles")',
        type: "POST",
	    data: { Id: roleId}
    })
    .done(function (data) {
        $.smallBox({
            title: "Success",
            content: "The role has been removed",
            color: "#5F895F",
            iconSmall: "fa fa-check bounce animated",
            timeout: 4000
        });
		location.reload();
    })
    .fail(function (xhr, httpStatusMessage, customErrorMessage) {
        alert(customErrorMessage);
    });
}
</script>
