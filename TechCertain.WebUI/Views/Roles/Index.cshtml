@model IEnumerable<TechCertain.WebUI.Models.Permission.ClaimViewModels>
<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">

        <!-- NEW WIDGET START -->
        <article class="col-xs-12 col-sm-12 col-md-6 col-lg-6">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                <header>
                    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                    <h2>Manage Roles </h2>

                </header>

                <!-- widget div-->
                <div>
                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->
                    </div>
                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body no-padding">
                        <table id="tableRoles" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ClaimName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                        <tr>
                                            <td>
                                          
                                                <p>@Html.DisplayFor(modelItem => item.ClaimName)</p>
                                           
                                            </td>
                                            <td>
                                                <p><a href="#" name="Description" class="editable" data-type="text" data-pk="@item.Id" data-title="Enter RoleName">@item.Description</a></p>
                                            </td>
                                            <td>
                                                <a href="javascript:void(0);" onclick="SaveRole('@item.Id');">Save</a> |
                                                <a href="javascript:void(0);" onclick="DeleteRole('@item.Id');">Delete</a>
                                            </td>
                                        </tr>
                                    }
                            </tbody>
                            <tfoot>
                                <tr>
                                    @*<td colspan="2">@Html.ActionLink("Create New Group", "Create")</td>*@
                                    <td colspan="2">
                                        <a onclick="$('#newGroupModal').show();" aria-hidden="true" style="color:green" data-toggle="modal"><ul>Create New Group</ul></a>

                                        @*<a href="#confirmDelete" aria-hidden="true" style="color:red" data-toggle="modal" data-boat-delname="@item.BoatName"><span class="glyphicon glyphicon-trash"></span></a>*@

                                        @*<a href="javascript:void(0);" onclick="ShowCreateModal();">Create New Group</a>*@
                                    </td>
                                </tr>
                                @*<tr>
                                        <td colspan="3"><a href="javascript:void(0);" onclick="ShowCreateModal();">Create New Role</a></td>
                                    </tr>*@
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </article>


    </div>
</div>



<div class="modal" id="newGroupModal" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="$('#newGroupModal').hide()">&times;</button>
                <h4 class="modal-title">Claim Details</h4>
            </div>
            <div class="modal-body">
                <div class="row">

                    <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <section class="col col-xs-3 col-sm-3 col-md-3 col-lg-3">

                            <label>Claim Name</label>
                        </section>
                        <section class="col col-xs-9 col-sm-9 col-md-9 col-lg-9">
                            <label class="input ">
                                <input data-type="TEXTBOX" data-name="groupName" id="groupName" name="Name" placeholder="Claim Name">
                            </label>
                        </section>
                    </section>
                    <section class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <section class="col col-xs-3 col-sm-3 col-md-3 col-lg-3">

                            <label>Claim Description</label>
                        </section>
                        <section class="col col-xs-9 col-sm-9 col-md-9 col-lg-9">
                            <label class="input ">
                                <input data-type="TEXTBOX" data-name="groupName" id="claimDescription" name="Description" placeholder="Claim Description">
                            </label>
                        </section>
                    </section>

                </div>
            </div>
            <div class="modal-footer">
                <section class="col col-xs-12">
                    @*<input type="Reset" value="Submit" class="btn btn-success" id="btnSubmit">*@
                    <button onclick="AddGroup();" class="btn-sm ">Add</button>

                    <a href="#" class="btn btn-danger" onclick="$('#newGroupModal').hide()">Cancel<i class="fa fa-close"></i></a>

                </section>
            </div>
        </div>
    </div>
</div>



<!-- END MAIN CONTENT -->

