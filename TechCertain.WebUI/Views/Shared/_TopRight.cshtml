<!-- Top menu profile link : this shows only when top menu is active -->

<!-- logout button -->

<div class="col-auto">
    <div id="logout" class="btn-header transparent pull-right">

        @if (User.Identity.IsAuthenticated)
        {

            <a href="~/Account/Profile"><i class="fa fa-user" style="font-size:28px; margin-top:13px;"></i></a>
            <a href="~/Home/Index"><i class="fa fa-home" style="font-size:28px; margin-top:13px;"></i></a>
            <a href="~/Home/Search"><i class="fa fa-search" style="font-size:28px;margin-top:13px;"></i></a>
            <a href="~/Account/Logout" title="Sign Out" data-action="userLogout" data-logout-msg="You can improve your security further after logging out by closing this opened browser"><i class="fa fa-sign-out" style="font-size:28px;margin-top:13px;"></i></a>
            <a href="#" onclick="ShowAdvisory()" title="Advisories" data-toggle="modal" data-target="#advisoryModal"><i class="fa fa-warning" style="font-size:28px;margin-top:13px;"></i></a>
        }

    </div>    
</div>

<script type="text/javascript">
    function ShowAdvisory() {
        debugger;
        $('#advisoryModal').show()
        document.getElementById('advisoryModal').hidden = false;
        debugger;
    }
</script>
<!-- end logout button -->
