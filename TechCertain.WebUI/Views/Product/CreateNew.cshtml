@section pagespecific {
<script src="/Scripts/plugin/multiselect/bootstrap-multiselect.min.js"></script>
<script src="/Scripts/plugin/chosen/chosen.jquery.min.js"></script>
<link href="/Content/css/bootstrap-chosen.css" rel="stylesheet" type="text/css" />
<!-- PAGE RELATED PLUGIN(S) -->
<script src="/Scripts/plugin/bootstrap-wizard/jquery.bootstrap.wizard.min.js"></script>
<script src="/Scripts/plugin/fuelux/wizard/wizard.min.js"></script>
<script type="text/javascript">

    // DO NOT REMOVE : GLOBAL FUNCTIONS!
    
    $(document).ready(function () {
		var validator = $("#wizard-1").validate({
        	ignore: ':hidden:not(.cselect)',
            rules: {
                "@(Html.NameFor(m => m.Description.Name))": {
                    required: true,
  					maxlength: 255
                },
                "@(Html.NameFor(m => m.Description.Description))": {
                    required: true,
  					maxlength: 255
                },
                "@(Html.NameFor(m => m.Description.SelectedLanguages))": {
                    required: true
                },
                "@(Html.NameFor(m => m.Description.SelectedBaseProduct))": {
                    required: true
                },
				// Need to try and get the chosen stuff working better
                //"@(Html.NameFor(m => m.Settings.SelectedDocuments))": {
                //    required: function () { if($("#@(Html.IdFor(m => m.Description.SelectedBaseProduct))").val() == "00000000-0000-0000-0000-000000000000") { return false; } else { return true; } }
                //},
                "@(Html.NameFor(m => m.Settings.SelectedInformationSheet))": {
                    required: function () { if($("#@(Html.IdFor(m => m.Description.SelectedBaseProduct))").val() == "00000000-0000-0000-0000-000000000000") { return false; } else { return false; } }
                },
            },
            messages: {
                "@(Html.NameFor(m => m.Description.Name))": {
                    required: 'Please provide a name for your product'
                },
                "@(Html.NameFor(m => m.Description.Description))": {
                    required: 'Please provide a description for your product'
                },
                "@(Html.NameFor(m => m.Description.SelectedLanguages))": {
                    required: 'Please select at least one language'
                },
                "@(Html.NameFor(m => m.Description.SelectedBaseProduct))": {
                    required: 'Please select a base product'
                },
                "@(Html.NameFor(m => m.Settings.SelectedInformationSheet))": {
                    required: 'Please select an information sheet'
                },
            },
            highlight: function (element) {
                $(element).closest('.form-group').removeClass('has-success').addClass('has-error');
            },
            unhighlight: function (element) {
                $(element).closest('.form-group').removeClass('has-error').addClass('has-success');
            },
            errorElement: 'span',
            errorClass: 'help-block',
            errorPlacement: function (error, element) {
                error.insertAfter(element.parent());
            }
        });

        var checkerrors = function() {
	        validator.form();
	    };

	    // find all multiselect items and apply Chosen
		$('.cselect').each(function() {
			$('#'+this.id).chosen( { width: '100%' } ).change(checkerrors);
		});

		$('#bootstrap-wizard-1').bootstrapWizard({
			'tabClass' : 'form-wizard',
			'onNext' : function(tab, navigation, index) {
                var $valid = $("#wizard-1").valid();
                debugger;
            	var numTabs = $('#wizard-1').find('.tab-pane').length;
				if (!$valid) {
					$validator.focusInvalid();
					return false;
				}
				$('#bootstrap-wizard-1').find('.form-wizard').children('li').eq(index - 1).addClass('complete');
				$('#bootstrap-wizard-1').find('.form-wizard').children('li').eq(index - 1).find('.step').html('<i class="fa fa-check"></i>');

				if (index === numTabs) {
                    // We are at the last tab
					$.ajax({
						type: "POST",
						url: '@Url.Action("CreateNew", "Product")',
						data: $("#wizard-1").serialize() // serializes the form's elements.
					}) 	
					.done(function (json) {
						//var model = JSON.parse(json);
	                    $('#successModal').modal();
						$('#productAutoReview').text("");
					})
					.fail(function (err, ajaxOptions, thrownError) {
	                    $('#failureModal').modal();
						$('#productAutoReview').text(err.responseText);
					});
                }
			},
			onTabClick : function(tab, navigation, index) {
				var $valid = $("#wizard-1").valid();
				if (!$valid) {
					validator.focusInvalid();
					return false;
				}
				$('#bootstrap-wizard-1').find('.form-wizard').children('li').eq(index).addClass('complete');
				$('#bootstrap-wizard-1').find('.form-wizard').children('li').eq(index).find('.step').html('<i class="fa fa-check"></i>');
				return true;
			},
			onTabShow: function(tab, navigation, index) {
				// Update the label of Next button when we are at the last tab
				var numTabs = $('#wizard-1').find('.tab-pane').length;
				$('#wizard-1')
				    .find('.next')
				        .removeClass('disabled')    // Enable the Next button
				        .find('a')
				        .html(index === numTabs - 1 ? 'Submit' : 'Next');
            }
		});
    });
</script>
}