@model TechCertain.WebUI.Models.Product.ProductPartiesVM

<fieldset>
	<div class="form-group">
		<label class="col-sm-2 control-label">Select an Insurer for this product</label>
        <div class="col-sm-10">
        	@* This helper function renders out the 'input-group' div automatically, no need to manually add it *@
	        @Html.DropDownListFor(m => m.SelectedInsurer, Model.Insurers)
            <span class="help-block">Only Information Sheets that belong to your primary Organisation will be shown here.</span>
        </div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Select a Broker for this product</label>
        <div class="col-sm-10">
        	@* This helper function renders out the 'input-group' div automatically, no need to manually add it *@
	        @Html.DropDownListFor(m => m.SelectedBroker, Model.Brokers)
            <span class="help-block">Only Information Sheets that belong to your primary Organisation will be shown here.</span>
        </div>
	</div>
</fieldset>
