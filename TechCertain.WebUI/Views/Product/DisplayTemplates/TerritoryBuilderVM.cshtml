@model TechCertain.WebUI.Models.Product.TerritoryBuilderVM


<div class="tab-pane active" id="tab1">
    <br />


    <div class="container">
        <h3><strong>Setup </strong> - New Territory</h3>
        <div class="input-group mb-3">
            <input type="text" class="form-control col-6" id="Builder_Location" name="Builder.Location" placeholder="Location">
        </div>

        <div class="input-group mb-3">
            <label><strong>Inclusion or Exclusion</strong></label>
            <select id="Builder_SelectedInclorExcl" name="Builder.SelectedInclorExcl" class="col-4">
                @foreach (var territory in Model.BaseExclIncl)
                {
                    <option value="@territory.Text">@territory.Text</option>
                }
            </select>
        </div>

        <div class="input-group mb-3">
            <input type="number" class="form-control col-6" id="Builder_Zoneorder" name="Builder.Zoneorder" placeholder="Zone Order">
        </div>

        <div class="input-group mb-3">
            <label><strong>I want this territory to be publicly available.</strong></label>
            <input type="checkbox" id="Builder_Ispublic" name="Builder.Ispublic">
        </div>
    </div>
</div>
