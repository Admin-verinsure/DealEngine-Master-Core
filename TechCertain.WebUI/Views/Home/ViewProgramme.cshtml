@model TechCertain.WebUI.Models.ProgrammeItem
<!-- MAIN CONTENT -->
    <div id="widget-grid" class="container">


        @Html.HiddenFor(m => m.ProgrammeId)        

        <div class="row">

            <table class="table table-condensed">
                <tbody>
                    <tr>
                        <td>
                            <ul class="nav">
                                <li class="nav-item">
                                    <a class="btn btn-primary btn-xs" href="~/Home/Index"><i class="fa fa-home"></i>Back to Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-primary btn-xs" href="#CreateUISModal" aria-hidden="true" style="color:white" data-progname-id="@Model.ProgrammeId" data-toggle="modal"><i class="fa fa-pencil"></i> Create UIS</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-primary btn-xs" href="~/Home/IssueUIS?ProgrammeId=@Model.ProgrammeId"><i class="fa fa-pencil"></i>Issue UIS</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="jarviswidget jarviswidget-color-darken container" id="wid-id-0" data-widget-editbutton="false">
                <header>
                    <span class="widget-icon"> <i class="fa fa-table text-light"></i> </span>
                    <h2>Information Sheets for Programme </h2>
                </header>

                <!-- widget div-->
                <div>

                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->

                    </div>
                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body no-padding">

                        <table id="tableProgrammeItems" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th>Client Name</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Deals)
                                {
                                    <tr>
                                        <td>@(item.Name + "  (Reference: " + item.ReferenceId + ") ")</td>
                                        <td>@(item.Status + "  (" + item.GetStatusDisplay() + ") ")</td>
                                        <td>
                                            <div class="btn-group btn-secondary" role="group" aria-label="Basic example">
                                                @if (item.Status.StartsWith("Bound"))
                                                {
                                                    @*<a class="btn btn-primary btn-xs" href="/Information/RenewInformation/@item.Id"><i class="fa fa-repea"></i> Renew</a>*@
                                                    <a class="btn btn-primary btn-sm" href="/Agreement/ViewAcceptedAgreement/@item.Id"><i class="fa fa-search"></i> View</a>
                                                    if (Model.CurrentUserIsBroker == "True" || Model.CurrentUserIsInsurer == "True" || Model.CurrentUserIsTC == "True")
                                                    {
                                                        <a class="btn btn-primary btn-sm" href="/Agreement/ViewAcceptedAgreement/@item.Id"><i class="fa fa-edit"></i> Manage</a>
                                                    }
                                                    if (item.Status == "Bound and invoiced" && item.ProgrammeAllowUsesChange && item.NextInfoSheet == false)
                                                    {
                                                        <a href="#myChangeModal" aria-hidden="true" class="btn btn-primary btn-sm" data-toggle="modal" data-dealitem-id="@item.Id"><i class="fa fa-edit"></i> Update</a>
                                                    }
                                                    @*<a class="btn btn-primary btn-xs" href="/Information/UpdateInformation/@item.Id"><i class="fa fa-pencil"></i> Update</a>*@

                                                }
                                                else if (item.Status == "Started")
                                                {
                                                    <a class="btn btn-primary btn-sm" href="/Information/EditInformation/@item.Id"><i class="fa fa-arrow-right"></i> Go</a>
                                                }
                                                else if (item.Status.StartsWith("Submitted"))
                                                {
                                                    <a class="btn btn-primary btn-sm" href="/Information/EditInformation/@item.Id"><i class="fa fa-arrow-right"></i> Go</a>
                                                    if (Model.CurrentUserIsBroker == "True" || Model.CurrentUserIsInsurer == "True" || Model.CurrentUserIsTC == "True")
                                                    {
                                                        <a class="btn btn-primary btn-sm" href="/Information/Unlock/@item.Id"><i class="fa fa-unlock"></i> Unlock</a>
                                                    }
                                                    if (Model.CurrentUserIsBroker == "True" || Model.CurrentUserIsInsurer == "True" || Model.CurrentUserIsTC == "True")
                                                    {
                                                        <a class="btn btn-primary btn-sm" href="/Agreement/ViewAcceptedAgreement/@item.Id"><i class="fa fa-edit"></i> Manage</a>
                                                    }
                                                }
                                                else if (item.Status == "Not Started")
                                                {
                                                    //<a class="btn btn-primary btn-xs" href="/Information/StartInformation/@item.Id"><i class="fa fa-arrow-right"></i> Go</a>
                                                    <a class="btn btn-primary btn-sm" href="/Information/EditInformation/@item.Id"><i class="fa fa-arrow-right"></i> Go</a>
                                                }
                                                else if (item.Status == "Not Taken Up")
                                                {
                                                    <a class="btn btn-primary btn-sm" href="/Information/Resume/@item.Id"><i class="fa fa-unlock"></i> Resume</a>
                                                    if (Model.CurrentUserIsBroker == "True" || Model.CurrentUserIsInsurer == "True" || Model.CurrentUserIsTC == "True")
                                                    {
                                                        <a class="btn btn-primary btn-sm" href="/Information/Unlock/@item.Id"><i class="fa fa-unlock"></i> Unlock</a>
                                                    }
                                                    if (Model.CurrentUserIsBroker == "True" || Model.CurrentUserIsInsurer == "True" || Model.CurrentUserIsTC == "True")
                                                    {
                                                        <a class="btn btn-primary btn-sm" href="/Agreement/ViewAcceptedAgreement/@item.Id"><i class="fa fa-edit"></i> Manage</a>
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- END MAIN CONTENT -->
        <div id="myChangeModal" class="modal" role="dialog">

            <!-- Modal content-->

            <div class="modal-content">

                <div class="modal-header">
                    <h3 class="modal-title" style="color:blue; font-size:22px">Change Details</h3>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="ProdForm">
                        <input class="form-control" hidden type="text" data-type="TEXTBOX" data-name="DealId" id="DealId" name="DealId" placeholder="Vessel Name" value="" required>
                        <table class="table table-striped">
                            <tr>
                                <td>
                                    <label for="changeType" class="required">Change Type</label>
                                </td>
                                <td>
                                    <select class="form-control b" id="ChangeType" name="ChangeType" title="" required>
                                        <option selected="selected" value="">-- Select here --</option>
                                        <option Value="TC_addAmendRiskInfo">Add Amend Risk Information</option>
                                        <option Value="TC_newCoverable">Add New Coverable</option>
                                        <option Value="TC_amendExcess">Amend Excess</option>
                                        <option Value="TC_amendLocation">Amend Location</option>
                                        <option Value="TC_amendSumInsured">Amend Sum Insured</option>
                                        <option Value="TC_amendTermsCoverage">Amend Terms/Coverage</option>
                                        <option Value="TC_amendAddReinsurance">Amend or Add Reinsurance</option>
                                        <option Value="TC_amendAddInsured">Amend or Add Insured</option>
                                        <option Value="TC_amendAddCI">Amend or Add Co-insurance</option>
                                        <option Value="TC_changeOfExpiryDate">Change of Expiry Date</option>
                                        <option Value="TC_changeOfBroker">Change of Broker</option>
                                        <option Value="TC_changeOfBizOrOcc">Change of Business or Occupation</option>
                                        <option Value="TC_deleteCoverable">Delete Existing Coverable</option>
                                        <option Value="TC_other">Other Amendment</option>
                                        <option Value="TC_amendOneTimeEvents">One Time Event</option>
                                    </select>
                                </td>
                                <td>
                                    <p class="validationContainer" id="validateChangeType"></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="Reason" class="required">Reason</label>
                                </td>
                                <td>
                                    <select class="form-control" id="ChangeReason" name="Reason" title="" required>
                                        <option selected="selected" value="">-- Select here --</option>
                                        <option Value="TC_businessSoldOrClosed_lgi">Business Sold or Closed</option>
                                        <option Value="TC_changeInCoverReq_lgi">Change in cover requirements</option>
                                        <option Value="TC_changeOfBroker_lgi">Change of Broker</option>
                                        <option Value="TC_dissatisfiedWithClaims_lgi">Dissatisfied with claims</option>
                                        <option Value="TC_dissatisfiedWithSvc_lgi">Dissatisfied with service</option>
                                        <option Value="TC_goneIntoGlobalAcct_lgi">Gone into Global Account</option>
                                        <option Value="TC_nonpayment">Non payment</option>
                                        <option Value="TC_policyReplaced_lgi">Policy replaced</option>
                                        <option Value="TC_tooDear_lgi">Too dear</option>
                                    </select>
                                </td>
                                <td>
                                    <p class="validationContainer" id="validateChangeReason"></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="ReasonDesc" class="required">Reason Description</label>
                                </td>
                                <td>
                                    <textarea class="form-control" data-type="TEXTAREA" id="Description" name="ReasonDesc" placeholder="Notes" value=""></textarea>
                                </td>
                                <td>
                                    <p class="validationContainer" id="validateDescription"></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="EffectiveDate" class="required">Effective Date</label>
                                </td>
                                <td>
                                    <input name="BoatEffectiveDate" placeholder="Effective Date" class=" form-control" data-dateformat="dd/mm/yy" id="ChangeEffectiveDate" type="text">
                                </td>
                                <td>
                                    <p class="validationContainer" id="validateEffectivedate"></p>
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-primary btn-xs" id="btnChangeSubmit">Update</a>
                </div>
            </div>
        </div>

        <div id="CreateUISModal" class="modal modal-lg" role="dialog">

            <!-- Modal content-->

            <div class="modal-content">

                <div class="modal-header">
                    <h3 class="modal-title" style="color:blue; font-size:22px">Client Details</h3>
                    <button type="button" class="close" id="CreateUISModalClose" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <form id="ProdForm">
                        @Html.HiddenFor(m => m.ProgrammeId)
                        <input class="form-control" hidden type="text" data-type="TEXTBOX" id="ProgId" name="ProgId">

                        <table class="table table-striped">
                            <tr>
                                <td>
                                    <label class="required">Organisation Type</label>
                                </td>
                                <td>
                                    <label class="radio-inline cgradio" style="width:25%;"> <input type="radio" name="cgradioselect" id="vown1" value="Private" checked="checked" onclick="vesselOwnUpdate()">Private</label>
                                </td>
                                <td>
                                    <label class="radio-inline cgradio" style="width:25%;"> <input type="radio" name="cgradioselect" id="vown2" value="Company" onclick="vesselOwnUpdate()">Company</label>
                                </td>
                                <td>
                                    <label class="radio-inline cgradio" style="width:25%;"> <input type="radio" name="cgradioselect" id="vown3" value="Trust" onclick="vesselOwnUpdate()">Trust</label>
                                </td>
                                <td>
                                    <label class="radio-inline cgradio" style="width:25%;"> <input type="radio" name="cgradioselect" id="vown4" value="Partnership" onclick="vesselOwnUpdate()">Partnership</label>
                                </td>
                                <td>
                                    <p class="validationContainer" id="validateOrgType"></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label class="required">Organisation Name</label>
                                </td>
                                <td colspan="3">
                                    <input class="form-control input-lg" placeholder="Enter Organisation Name" type="text" name="fname" id="UISorgname">
                                </td>
                                <td>
                                    <p class="validationContainer" id="validateOrgName"></p>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <label class="required">First Name</label>
                                </td>
                                <td colspan="3">
                                    <input class="form-control input-lg" placeholder="Enter First Name" type="text" name="fname" id="UISfname">
                                </td>
                                <td>
                                    <p class="validationContainer" id="validateFirstName"></p>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <label class="required">Last Name</label>
                                </td>
                                <td colspan="3">
                                    <input class="form-control input-lg" placeholder="Enter Last Name" type="text" name="lname" id="UISlname">
                                </td>
                                <td>
                                    <p class="validationContainer" id="validateLastName"></p>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <label class="required">Email</label>
                                </td>
                                <td colspan="3">
                                    <input class="form-control input-lg" placeholder="Enter Email" type="text" name="email" id="UISEmail">
                                </td>
                                <td>
                                    <p class="validationContainer" id="validateEmail"></p>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <label>Membership Number</label>
                                </td>
                                <td colspan="3">
                                    <input class="form-control input-lg" placeholder="Enter Membership Number" type="text" name="memno" id="UISMembershipno">
                                </td>
                                <td>
                                    <p class="validationContainer" id="validateMembershyipNo"></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label class="required">Mobile Phone</label>
                                </td>
                                <td colspan="3">
                                    <input class="form-control input-lg" placeholder="Enter Mobile Number" type="text" name="mphon" id="UISmphon" aria-required="true" aria-invalid="false" maxlength="14">
                                </td>
                                <td>
                                    <p class="validationContainer" id="validateMobileNo"></p>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                        </table>
                    </form>
                </div>
                <div class="modal-footer">
                    <button" id="next" type="button" class="btn btn-success btn-sm" onclick="validationCheck();" data-toggle="tab">Submit</button>
                </div>
            </div>
        </div>


        <style>

            .required:after {
                content: " *";
                color: red;
                font-size: 20px;
            }
        </style>

    </div>


@section pagespecific {


    <script type="text/javascript">

                  $('#myChangeModal').on('show.bs.modal', function (e) {
                       debugger;
                    $('.modal').css({ "width": "50%", "margin-left": "25%" });
                       var dealId = $(e.relatedTarget).data('dealitem-id');
                  $(e.currentTarget).find('input[name="DealId"]').val(dealId);

                  });

                $('#CreateUISModal').on('show.bs.modal', function (e) {
                    debugger;
                    $('.modal').css({ "width": "80%", "margin-left": "25%" });
                    var PanelPositon = $(e.relatedTarget).data('progname-id');
                    $(e.currentTarget).find('input[name="ProgId"]').val(PanelPositon);
                    $('#ProgId').addClass('hidden');
                });

                function vesselOwnUpdate() {
                    debugger;
                    var OrgType = $('input[name=cgradioselect]:checked').val();

                    if (OrgType == "Private") {
                        $('#UISorgnamesection').addClass('hidden');
                    } else {
                        $('#UISorgnamesection').removeClass('hidden');
                    }

                }

                function ValidateEmail() {
                    var Email = $('#UISEmail').val();
                    debugger;
                    if (/^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(Email)) {
                        return (true)
                    } else
                        return (false)
                }

                function IssueUIS() {
                    event.preventDefault();
                    var programmeId = $('#ProgrammeId').val();
                    var postData = { ProgrammeId: programmeId };
                    $.ajax({
                        type: 'GET',
                        url: '@Url.Action("IssueUIS", "Home")',
                        data: postData
                    })
                        .done(function(data) {
                            debugger;
                        })
                        .fail(function (jqXhr, textStatus, errorThrown) {
                            debugger;
                            console.log(errorThrown);
                        });
                }

                function validationCheck() {
                    debugger;
                    var OrgName = $('#UISorgname').val();
                    var Fname = $('#UISfname').val();
                    var LastName = $('#UISlname').val();
                    var MobilePhone = $('#UISmphon').val();
                    var Email = $('#UISEmail').val();
                    var OrgType = $('input[name=cgradioselect]:checked').val();

                    var validation = true;


                    if (OrgName == "" && OrgType != "Private") {
                        $('#validateOrgName').html("<font color='red'>Field is required</font>");
                        if (validation) {
                            validation = false;
                        }
                    } else {
                        $('#validateOrgName').html("");
                    }

                    if (Fname == "") {
                        $('#validateFirstName').html("<font color='red'>Field is required</font>");
                        if (validation) {
                            validation = false;
                        }
                    } else {
                        $(validateFirstName).html("");
                    }
                    if (LastName == "") {
                        $('#validateLastName').html("<font color='red'>Field is required</font>");
                        if (validation) {
                            validation = false;
                        }
                    } else {
                        $(validateLastName).html("");
                    } if (MobilePhone == "") {
                        $('#validateMobileNo').html("<font color='red'>Field is required</font>");
                        if (validation) {
                            validation = false;
                        }
                    } else {
                        $('#validateMobileNo').html("");
                    }

                    if (Email == "") {
                        $('#validateEmail').html("<font color='red'>Field is required</font>");
                        if (validation) {
                            validation = false;
                        }
                    } else {
                        if (ValidateEmail()) {
                            $('#validateEmail').html("");

                        } else {
                            if (validation) {
                                validation = false;
                            }
                            $('#validateEmail').html("<font color='red'>Email Entered is Invalid</font>");

                        }


                    } if (OrgType == "") {
                        $('#validateOrgType').html("<font color='red'>Field is required</font>");
                        if (validation) {
                            validation = false;
                        }
                    } else {
                        $('#validateOrgType').html("");
                    }

                    if (validation) {
                        postCGData();
                    } else
                        return validation;
                };

                function postCGData() {
                    debugger;
                    var OrgName = $('#UISorgname').val();
                    var Fname = $('#UISfname').val();
                    var LastName = $('#UISlname').val();
                    var MobilePhone = $('#UISmphon').val();
                    var Email = $('#UISEmail').val();
                    var MembershipNumber = $('#UISMembershipno').val();
                    var OrgType = $('input[name=cgradioselect]:checked').val();
                    var programmeID = $('#ProgId').val();


                    var postData = {
                        orgName: OrgName,
                        firstName: Fname,
                        lastName: LastName,
                        programmeID: programmeID,
                        email: Email,
                        mobilePhone: MobilePhone,
                        orgType: OrgType,
                        membershipNumber: MembershipNumber
                    };

                    $.ajax({
                        type: "POST",
                        url: "/Services/IssueUIS",
                        data: postData,
                        traditional: true,
                    })
                        .done(function (data, textStatus, jQxhr) {
                            debugger;
                            $('#CreateUISModal' + " :input").val("");
                            $('#CreateUISModal').addClass('hidden');
                            location.reload(true);
                        })
                        .fail(function (jqXhr, textStatus, errorThrown) {
                            debugger;
                            console.log(errorThrown);
                        });
                }

    </script>
    @Html.Partial("_ProgrammeScripts")

}

