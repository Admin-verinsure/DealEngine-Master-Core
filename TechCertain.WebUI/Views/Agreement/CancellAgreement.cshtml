                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label>Cancellation Action: </label>
                        </td>
                        <td>
                            @*<button onclick='$("#Showterms").show();' type="button" class="btn btn-success btn-sm"><i class="fa fa-edit"> Request Cancel </i></button>*@
                            @*<button onclick="EditBoat();" type="button" class="btn btn-success btn-sm"><i class="fa fa-edit"> Confirm Cancel </i></button>*@
                            <button onclick="Cancell()" type="button" class="btn btn-success btn-sm" id="SendInvoice"><i class="fa fa-edit"></i> Request Cancel </button>
                        </td>
                    </tr>


