@model TechCertain.WebUI.Models.Agreement.MyAgreementsViewModel
@using  Microsoft.AspNetCore.Routing;

<!-- START MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark"><i class="fa-fw fa fa-briefcase"></i> My Agreements</h1>
        </div>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="">

        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-6">

                <!-- Start My Agreements Widget -->
                <div class="jarviswidget jarviswidget-color-blue" id="wid-my-agreements" data-widget-fullscreenbutton="false" data-widget-editbutton="false" data-widget-colorbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-comments txt-color-white"></i> </span>
                        <h2> My Agreements </h2>
                    </header>
                    <div>
                        <div class="widget-body no-padding">
                            <!-- content goes here -->
                            <form class="smart-form">
                                <table class="table table-striped table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Agreement</th>
                                            <th>Status</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.MyAgreements)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.Raw(@item.InformationName)
                                                </td>
                                                <td>
                                                    @item.Status
                                                </td>
                                                <td>
                                                    <a class="btn btn-primary btn-xs" href="@Url.Action("ViewAgreement", "Agreement",
													new RouteValueDictionary(new { id = item.InformationId }))"> Go <i class="fa fa-arrow-right"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </form>
                            <!-- end content -->
                        </div>
                    </div>
                </div>
                <!-- End My Agreements Widget -->
            </article>
        </div>

    </section>

    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->
