@model BaseListViewModel<TechCertain.WebUI.Models.Agreement.ViewAgreementViewModel>
<!-- MAIN CONTENT -->
<div id="content" class="container">

    <div class="row">
        <h1 class="page-title txt-color-blueDark"><i class="fa-fw fa fa-home"></i> Agreement <span>> @ViewBag.Title</span></h1>
    </div>

    <div class="row">
        <span>
            <a class="btn btn-primary btn-xs" href="~/Home/Index" id="backbutton"><i class="fa fa-home"></i> Back to Dashboard</a>
        </span>
    </div>

    <!-- NEW WIDGET START -->
    <div class="row">
        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget container-fluid" id="wid-id-10"
             data="false"
             data-widget-collapsed="false"
             data-widget-colorbutton="false"
             data-widget-custombutton="false"
             data-widget-deletebutton="false"
             data-widget-editbutton="false"
             data-widget-fullscreenbutton="false"
             data-widget-togglebutton="false"
             data-widget-sortable="false">

            <header>
            </header>

                <form class="smart-form">
                    @foreach (var item in Model)
                    {
                            @if (item.CurrentUser.PrimaryOrganisation.IsBroker || item.CurrentUser.PrimaryOrganisation.IsTC)
                            {
                                <div class="form-group">
                                    <a href="~/Information/ViewProgrammeDetails/@item.ClientProgrammeId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> View Information Sheet</a>
                                    <a href="~/Agreement/EditAgreement/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Edit Agreement</a>
                                    <a href="~/Agreement/ViewAgreementRule/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Edit Agreement Rules</a>
                                    <a href="~/Agreement/ViewAgreementEndorsement/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Edit Agreement Endorsements</a>
                                </div>

                                <div class="form-group">
                                    <a href="~/Agreement/EditTerms/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Edit Terms</a>
                                    <a href="@Url.Action("AuthoriseReferrals", "Agreement", new { sheetId = @item.ClientProgrammeId, informationsheet = @item.InformationSheetId, agreementId = @item.ClientAgreementId })" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Authorise Referrals</a>
                                    @if (item.Status != "Declined by Insurer" || item.Status != "Declined by Insured" || item.Status != "Cancelled" ||
                                item.Status != "Bound" || item.Status != "Bound and invoice pending" || item.Status != "Bound and invoiced")
                                    {
                                        <a href="~/Agreement/DeclineAgreement/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Decline Agreement</a>
                                    }
                                    @if (item.Status == "Declined by Insurer" || item.Status == "Declined by Insured")
                                    {
                                    <a href="~/Agreement/UndeclineAgreement/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Undecline Agreement</a>
                                    }
                                    @if ((item.Status != "Declined by Insurer" || item.Status != "Declined by Insured" || item.Status != "Cancelled") &&
                                    (item.Status == "Bound" || item.Status == "Bound and invoice pending" || item.Status == "Bound and invoiced"))
                                    {
                                    <a href="~/Agreement/CancellAgreement/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Cancel Agreement</a>
                                    }
                                    <a href="@Url.Action("EditBillingConfiguration", "Programme", new { programmeId = @item.ClientProgrammeId })" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Billing Information Configuration</a>
                                </div>

                            }
                            else if (item.CurrentUser.PrimaryOrganisation.IsInsurer)
                            {
                                <div class="form-group">
                                    <a href="~/Information/ViewProgrammeDetails/@item.ClientProgrammeId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> View Information Sheet</a>
                                    <a href="~/Agreement/ViewAgreementEndorsement/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Edit Agreement Endorsements</a>
                                    <a href="~/Agreement/EditTerms/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Edit Terms</a>
                                    <a href="@Url.Action("AuthoriseReferrals", "Agreement", new { sheetId = @item.ClientProgrammeId, informationsheet = @item.InformationSheetId, agreementId = @item.ClientAgreementId })" class="btn txt-color-white bg-color-green btn-sm"><i class="fa fa-edit"></i> Authorise Referrals</a>
                                </div>

                                <div class="form-group">
                                    @if (item.Status != "Declined by Insurer" || item.Status != "Declined by Insured" || item.Status != "Cancelled" ||
                                 item.Status != "Bound" || item.Status != "Bound and invoice pending" || item.Status != "Bound and invoiced")
                                    {
                                        <a href="~/Agreement/DeclineAgreement/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Decline Agreement</a>
                                    }
                                    @if (item.Status == "Declined by Insurer" || item.Status == "Declined by Insured")
                                    {
                                    <a href="~/Agreement/UndeclineAgreement/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Undecline Agreement</a>
                                    }
                                    @if ((item.Status != "Declined by Insurer" || item.Status != "Declined by Insured" || item.Status != "Cancelled") &&
                                    (item.Status == "Bound" || item.Status == "Bound and invoice pending" || item.Status == "Bound and invoiced"))
                                    {
                                    <a href="~/Agreement/CancellAgreement/@item.ClientAgreementId" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Cancel Agreement</a>
                                    }
                                </div>
                            }

                        <div class="form-group">
                            @await Html.PartialAsync("Partials/ViewAgreement", item)
                        </div>

                        <div class="form-group">
                            @if ((item.Status != "Declined by Insurer" || item.Status != "Declined by Insured" || item.Status != "Cancelled") &&
                    (item.Status == "Bound" || item.Status == "Bound and invoice pending" || item.Status == "Bound and invoiced"))
                            {
                                <h3><strong>Documents </strong></h3>
                                @await Html.PartialAsync("Partials/ViewAgreementDocs", item.Documents)
                                <h3><strong>Options </strong></h3>

                                <div class="widget-body widget-hide-overflow">
                                    <fieldset>
                                        <div class="row">
                                            <section class="col col-12">
                                                <a class="btn btn-primary btn-sm" href="/Agreement/RenderDocuments/@item.InformationSheetId">Render Documents</a>
                                                <a class="btn btn-success btn-sm" href="~/Agreement/SendPolicyDocuments/@item.InformationSheetId"><i class="fa fa-edit"></i> Send Policy Documents</a>
                                            </section>
                                        </div>
                                    </fieldset>
                                </div>
                            }
                        </div>


                    }

                    <div class="form-group">
                        <hr />
                        <hr />
                    </div>

                    <div class="form-group">
                        <div> <button class="btn btn-success btn-sm" onclick="SaveCoveroptions();">Save All Cover Options</button></div>
                    </div>
                </form>
        </div>
        <!-- end widget -->
    </div>
    <!-- WIDGET END -->
</div>


@section pagespecific {
    <script src="~/jquery/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/smartadmin-production.min.css">

    <script type="text/javascript">
          function SaveCoveroptions() {
              debugger;
              var ID = "@ViewBag.Id";
         //var ID = $('#Id').val();
               var postdata = {
                     id : ID
                }
                $.ajax({
                   url: '@Url.Action("GetProductName", "Information")',
                   type: "POST",
                   data: postdata
                })
                    .done(function (data) {
                        debugger;
                        var prodname = data;
                        var CoverOptions = new Array(prodname.length);

                        for (var i = 0; i < prodname.length; i++) {
                            var ProdName = prodname[i];
                            var queryselector = ""+"input[name=\'" + ProdName + "\']:checked";
                            var optionsselected = $(queryselector).val();
                                    CoverOptions[i] = optionsselected;
                        }

                        var progId = $('#ClientProgrammeId').val();
                        var postData = { Answers: CoverOptions, ProgrammeId: progId };

                        $.ajax({
                            url: '@Url.Action("SaveCoverOptions", "Information")',
                            type: "POST",
                            data: postData
                        })
                            .done(function (data) {
                            })
                            .fail(function (a, s, d) {
                                alert("Unable to save.");
                            });

                    }).fail(function (jqXHR, textStatus, errorThrown) {
                        alert("There was an error getting ProductName.");
                    });

        };

          $(window).on("load", function () {
        debugger;
              if ($("#Sheetstatus").val() != "Started") {
            var progId = "@ViewBag.Id";
            //var progId = $('#ClientProgrammeId').val();
            var postData = { ProgrammeId: progId };

            $.ajax({
                url: '@Url.Action("GetCoverOptions", "Information")',
                type: "POST",
                data: postData
            }).done(function (data) {
                debugger;
                if (data != "") {
                    for (var item = 0; item < data.length; item++) {
                        var arr = data[item];
                        var count = 0;
                        //var element = 'input[name=\\"' + arr[count] + '"][value=\\"' + arr[count + 1] + '"]';
                        var queryselector = "" + "input[name=\'" + arr[count] + "\'][value=\'" + arr[count + 1] + "\']";

                        $(queryselector).attr('checked', true);
                        //$("#"+Arr[count]).
                        //$('#' + arr[count+1]).val(arr[count + 1]);
                    }
                };
            }).fail(function (a, s, d) {
                debugger;
            });
        }
    });

    </script>
}