@model techcertain2019core.Models.ViewModels.ChangePasswordViewModel

<div class="form-horizontal" id="changePasswordForm">
	@* Dummy username/password fields since password managers don't respect 'autocomplete="off"' *@
	<input style="display:none" type="password" name="fakecurrentpasswordremembered" autocomplete="off"/>
	<input style="display:none" type="password" name="fakenewpasswordremembered" autocomplete="off"/>
	<input style="display:none" type="password" name="fakeconfirmnewpasswordremembered" autocomplete="off"/>
	
	@Html.ValidationSummary("There were some problems when changing your password")
	@Html.AntiForgeryToken()
<div class="form-group">

    @Html.PasswordFor(m => m.CurrentPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Current Password", @autocomplete = "off" } })
    @Html.ValidationMessageFor(m => m.CurrentPassword)
</div>
<div class="form-group">

    @Html.PasswordFor(m => m.CurrentPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "New Password", @autocomplete = "off" } })    
    @Html.ValidationMessageFor(m => m.NewPassword)
</div>
<div class="form-group">
    @Html.PasswordFor(m => m.CurrentPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirm New Password", @autocomplete = "off" } })
    
    @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
</div>
	<div class="form-group">
        <div class="col-md-offset-1 col-md-11">
            <button class="btn-success">
                Change Password
            </button> 
        </div>
    </div>
</div>
