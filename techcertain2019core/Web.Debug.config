      <add assembly="NLog.Elmah" />
    </extensions>
    <targets>
      <!-- https://github.com/NLog/NLog/wiki/Layout-Renderers -->
      <target xsi:type="Elmah" name="elmahWithLogLevelAsType" layout="${logger} ${longdate} ${uppercase:${level}}: ${message} ${exception:format=tostring}" LogLevelAsType="true" />
      <target xsi:type="File" name="file" fileName="${basedir}/tracelogs/${longdate}.log" layout="${longdate} ${uppercase:${level}}: ${message}" />
      <target name="mail" xsi:type="Mail" smtpServer="localhost" from="system@proposalonline.com" to="postmaster@techcertain.com" />
    </targets>
    <rules>
      <logger name="*" minlevel="Info" writeTo="elmahWithLogLevelAsType" />
