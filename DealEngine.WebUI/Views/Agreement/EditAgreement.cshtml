@model DealEngine.WebUI.Models.Agreement.ViewAgreementViewModel
<!-- NEW WIDGET START -->
<div class="container">

    <div class="row">
        <h1 class="page-title txt-color-blueDark">
            <!-- PAGE HEADER -->
            <i class="fa-fw fa fa-home"></i>
            <a href="~/Agreement/ViewAcceptedAgreement/@Model.ClientProgrammeId"> Agreement</a>
            > <span>Edit Agreement</span>
        </h1>
    </div>
    <div class="row">
        <span>
            <a onclick="location.href='@Url.Action("ViewAcceptedAgreement", "Agreement",new { Id =@Model.ClientProgrammeId })'" style="color:dodgerblue;font-size:30px; cursor:pointer"> <span _ngcontent-c7="" class="icon-append fa fa-arrow-circle-left"></span>  </a>
        </span>
    </div>

    <div class="row">
        <div class="jarviswidget container-fluid" id="wid-id-10"
             data="false"
             data-widget-editbutton="false"
             data-widget-togglebutton="false"
             data-widget-deletebutton="false"
             data-widget-custombutton="false"
             data-widget-sortable="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-list-alt"></i> </span>
                <h2>@ViewBag.Title </h2>
            </header>
            <!-- widget div-->
            <form action="~/Agreement/EditAgreement/@Model.ClientAgreementId" method="POST" id="update-form" enctype="multipart/form-data">
                @Html.HiddenFor(m => m.ClientAgreementId)
                @Html.HiddenFor(m => m.InformationSheetId)

                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <td>
                                <label class="label required"><strong>Policy Start Date: </strong></label>
                            </td>
                            <td>
                                <label class="input">
                                    @*<i class="icon-append fa fa-edit"></i>*@
                                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "Startdate", dateFormat = "dd/mm/yy" } })

                                </label>
                            </td>
                        </tr>
                        <tr class="table-light">
                            <td>
                                <label class="label required"><strong>Policy End Date: </strong></label>
                            </td>
                            <td>
                                <label class="input">
                                    @*<i class="icon-append fa fa-edit"></i>*@
                                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "Startdate", dateFormat = "dd/mm/yy" } })

                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="label required"><strong>Client Number #: </strong></label>
                            </td>
                            <td>
                                <label class="input">
                                    @*<i class="icon-append fa fa-edit"></i>*@
                                    @Html.TextBoxFor(m => m.ClientNumber)
                                </label>
                            </td>
                        </tr>
                        <tr class="table-light">
                            <td>
                                <label class="label required"><strong>Insurer Policy #: </strong></label>
                            </td>
                            <td>
                                <label class="input">
                                    @*<i class="icon-append fa fa-edit"></i>*@
                                    @Html.TextBoxFor(m => m.PolicyNumber)
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="label required"><strong>Brokerage Rate: </strong></label>
                            </td>
                            <td>
                                <label class="input">
                                    @*<i class="icon-append fa fa-edit"></i>*@
                                    @Html.TextBoxFor(m => m.BrokerageRate)
                                </label>
                            </td>
                        </tr>
                        <tr class="table-light">
                            <td>
                                <label class="label required"><strong>Administration Fee: </strong></label>
                            </td>
                            <td>
                                <label class="input">
                                    @*<i class="icon-append fa fa-edit"></i>*@
                                    @Html.TextBoxFor(m => m.AdministrationFee)
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="label required"><strong>Retroactive Date: </strong></label>
                            </td>
                            <td>
                                <label class="input">
                                    @*<i class="icon-append fa fa-edit"></i>*@
                                    @Html.TextBoxFor(m => m.RetroactiveDate)
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="label required"><strong>Territory: </strong></label>
                            </td>
                            <td>
                                <label class="input">
                                    @*<i class="icon-append fa fa-edit"></i>*@
                                    @Html.TextBoxFor(m => m.TerritoryLimit)
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="label required"><strong>Jurisdiction: </strong></label>
                            </td>
                            <td>
                                <label class="input">
                                    @*<i class="icon-append fa fa-edit"></i>*@
                                    @Html.TextBoxFor(m => m.Jurisdiction)
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="label required"><strong>Professional Business: </strong></label>
                            </td>
                            <td>
                                <label class="input">
                                    @*<i class="icon-append fa fa-edit"></i>*@
                                    @Html.TextBoxFor(m => m.ProfessionalBusiness)
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Save</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <a href="~/Agreement/ViewAcceptedAgreement/@Model.ClientProgrammeId" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Cancel</a>
                                </div>
                            </td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>


@section pagespecific {

    <script>
        $('.Startdate').datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });

    </script>
 }