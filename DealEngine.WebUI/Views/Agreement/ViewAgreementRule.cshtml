@model DealEngine.WebUI.Models.Agreement.ViewAgreementRuleViewModel

<div class="container">
    <div class="row">
        <h1 class="page-title txt-color-blueDark">
            <!-- PAGE HEADER -->
            <i class="fa-fw fa fa-home"></i>
            <a href="~/Agreement/ViewAcceptedAgreement/@Model.ClientProgrammeID"> Agreement</a>
            > <span>Edit Agreement Rule</span>
        </h1>
    </div>

    <div class="row">
        <span>
            <a onclick="location.href='@Url.Action("ViewAcceptedAgreement", "Agreement",new { Id =@Model.ClientProgrammeID })'" style="color:dodgerblue;font-size:30px; cursor:pointer"> <span _ngcontent-c7="" class="icon-append fa fa-arrow-circle-left"></span>  </a>
        </span>
    </div>

    <div class="jarviswidget container-fluid" id="wid-id-10"
         data="false"
         data-widget-editbutton="false"
         data-widget-togglebutton="false"
         data-widget-deletebutton="false"
         data-widget-custombutton="false"
         data-widget-sortable="false">
        <header>
            <span class="widget-icon"> <i class="fa fa-list-alt"></i> </span>
            <h2>@ViewBag.Title </h2>
        </header>

        <!-- widget div-->
        <form action="~/Agreement/ViewAgreementRule/@Model.ClientAgreementID" method="POST" id="update-form">
            @Html.HiddenFor(m => m.ClientAgreementID)
            @Html.HiddenFor(m => m.ClientProgrammeID)

            <table class="table table-striped table-bordered">

                @for (var i = 0; i < Model.ClientAgreementRulesTypeRate.Count(); i++)
                {
                    if (i % 2 == 1)
                    {
                        <tr class="table-light">
                            <td hidden>
                                @Html.TextBoxFor(m => m.ClientAgreementRules[i].ClientAgreementRuleID)
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.ClientAgreementRules[i].Description)
                            </td>
                            <td>
                                @Html.TextBoxFor(m => m.ClientAgreementRules[i].Value)
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td hidden>
                                @Html.TextBoxFor(m => m.ClientAgreementRules[i].ClientAgreementRuleID)
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.ClientAgreementRules[i].Description)
                            </td>
                            <td>
                                @Html.TextBoxFor(m => m.ClientAgreementRules[i].Value)
                            </td>
                        </tr>
                    }


                }
                <tr>
                    <td>
                        <div class="form-group">
                            <button type="submit" value="Submit" class="btn btn-success btn-sm"><i class="fa fa-edit"></i> Update Premium</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <a href="~/Agreement/ViewAcceptedAgreement/@Model.ClientProgrammeID" class="btn btn-warning btn-sm"><i class="fa fa-trash"></i> Cancel</a>
                        </div>
                    </td>
                    <td>
                    </td>
                </tr>
            </table>

        </form>
    </div>
    <!-- end widget -->
</div>


