@model System.Data.DataTable
@using System.Data

<h2>Populate Data</h2>

<div>
    @if(Model != null)
    {
        <table border="1">
            <thead>
                <tr>
                    @foreach (System.Data.DataColumn col in Model.Columns)
                    {
                        <th>@col.Caption</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in Model.Rows)
                {
                   <tr>
                         @foreach(var cell in row.ItemArray)
                         {
                          if(cell != null)
                          {
                                  <td>@cell</td>
                          }
                          else
                          {
                                  <td></td>
                          }
                         }
                   </tr>
                 }
            </tbody>
        </table>
    }
</div>
