@model System.Data.DataTable
@using System.Data

    <h2>@ViewBag.Title</h2>

<div>
    @if(Model != null)
    {
        <table border="1" width="60%">
            <thead>
                <tr>
                    @foreach (System.Data.DataColumn col in Model.Columns)
                    {
                            <th>@col.Caption</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in Model.Rows)
                  {
                   <tr>
                      @foreach (var cell in row.ItemArray)
                       {
                          if (cell != "{00000000-0000-0000-0000-000000000000}")
                          {
                            if (cell != null)
                            {
                                <td>@cell</td>
                            }
                            else
                            {
                                <td></td>
                            }
                          }

                       }
                    </tr>
                   }
            </tbody>
        </table>
    }
</div>
