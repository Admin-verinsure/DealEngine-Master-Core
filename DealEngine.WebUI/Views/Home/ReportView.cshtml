@model IssueUISViewModel

<div class="container">
    <form id="ReportForm" method="POST" action="~/Home/GetReportView" novalidate>
        <input type="text" class="form-control" value="@Model.ProgrammeId" id="programmeId" name="ProgrammeId" hidden>
        <input type="text" class="form-control" value="@Model.ProgrammeName" id="programmeName" name="ProgrammeName" hidden>

        <div class="card">
            <div class="card-header">
                <h5>
                    This page lists the reports available for this programme.
                </h5>
            </div>
            <div class="card-body">
                <table class="container">
                    <thread>
                        <tr>
                            <th>

                                Name
                            </th>

                        </tr>
                    </thread>
                    <tbody>

                        <tr>

                            <td>
                                <select class="form-control b" id="ClientProg" name="queryselect">
                                    <option selected="selected" value="">-- Select --</option>
                                    @{
                                        if (Model.EnablePIReport)
                                        {
                                            <option value="PI">PI Cover Limit and Premium Selected</option>

                                        }

                                    }
                                    @{
                                        if (Model.EnableEDReport)
                                        {
                                            <option value="ED">ED Premium</option>

                                        }

                                    }
                                    @{
                                        if (Model.EnableCLReport)
                                        {
                                            <option value="CL">Cyber Premium</option>

                                        }

                                    }
                                    @{
                                        if (Model.EnableCyberReport)
                                        {
                                            <option value="Cyber">Investment Defence and Settlement Costs Sub-Limit Premium and Limits</option>

                                        }

                                    }
                                    @{
                                        if (Model.ProgrammeName == "NZFSG Programme" && Model.EnableFAPReport)
                                        {
                                            <option value="FAP">NZFG FAP Report</option>

                                        }

                                    }
                                    @{
                                        if (Model.ProgrammeName == "TripleA Programme" && Model.EnableFAPReport)
                                        {
                                            <option value="FAP">AAA FAP Report</option>

                                        }

                                    }
                                    @{
                                        if (Model.ProgrammeName == "Abbott Financial Advisor Liability Programme" && Model.EnableFAPReport)
                                        {
                                            <option value="FAP">Abbott Financial Advisor Liability  FAP Report</option>

                                        }

                                    }

                                </select>

                            </td>


                        </tr>

                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary btn-xs" id="submit" type="submit">View</button>
            </div>
        </div>
    </form>
</div>
<div class="modal overlay" id="AddReportModal" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <p><img src="/img/loading.gif" /> Fetching Records. Please wait...</p>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        debugger;
        $("#submit").click(function () {
            $("#AddReportModal").show();
            
        });
    })
</script>
