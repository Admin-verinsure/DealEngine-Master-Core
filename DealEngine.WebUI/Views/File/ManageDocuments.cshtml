@model BaseListViewModel<DealEngine.WebUI.Models.DocumentInfoViewModel>
<!-- MAIN CONTENT -->
<div id="content" class="container">

    <div class="form-group">
        <h1 class="page-title txt-color-blueDark">
            <!-- PAGE HEADER -->
            <i class="fa-fw fa fa-home"></i>  <span>
                <a href="~/Home/Index"> Dashboard</a>
                > My Documents
            </span>
        </h1>
    </div>
    <div class="form-group">
        <span>
            <a class="btn btn-primary btn-xs text-white" onclick="location.href='@Url.Action("Index", "Home")'" id="backbutton"><i class="fa fa-home"></i> Back </a>
        </span>
    </div>
    <div class="form-group">
        <div class="card">
            <div class="card-header">
                <span class="widget-icon">                    
                    <h2><i class="fa fa-comments txt-color-white"></i> My Documents </h2><a class="btn btn-primary float-right" href="/File/CreateDocument?productId=@Model.FirstOrDefault().ProductId" >Create New Document</a>
                </span>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Product</th>
                            <th>Type</th>
                            <th>Owner</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model)
                        {
                            <tr>
                                <td>@doc.DisplayName</td>
                                <td>@doc.ProductName</td>
                                <td>@doc.Type</td>
                                <td>@doc.Owner</td>
                                <td>
                                    <a class="btn btn-primary btn-xs" href="/File/GetDocument/@(doc.Id)">Get Html</a>
                                    <a class="btn btn-primary btn-xs" href="/File/GetDocument/@(doc.Id)?format=docx">Get Docx</a>
                                    @if (User.HasClaim("EditManageDocuments", "EditManageDocuments"))
                                    {
                                        <a class="btn btn-primary btn-xs" href="/File/CreateDocument/@(doc.Id)">Update</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>