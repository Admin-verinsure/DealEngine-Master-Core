@model BaseListViewModel<DealEngine.WebUI.Models.DocumentInfoViewModel>

@{ 
    var productId = Model.FirstOrDefault().ProductId;
}

<!-- MAIN CONTENT -->
<div id="content" class="container">

    <div class="form-group">
        <h1 class="page-title txt-color-blueDark">
            <!-- PAGE HEADER -->
            <i class="fa-fw fa fa-home"></i>  <span>
                <a href="~/Home/Index"> Dashboard</a>
                > My Documents
            </span>
        </h1>
    </div>
    <div class="form-group">
        <span>
            <a class="btn btn-primary btn-xs text-white" onclick="location.href='@Url.Action("Index", "Home")'" id="backbutton"><i class="fa fa-home"></i> Back </a>
        </span>
    </div>
    <div class="form-group">
        <div class="card">
            <div class="card-header">
                <span class="widget-icon">
                    @if (productId == "")
                    {
                        <h2><i class="fa fa-comments txt-color-white"></i> My Documents </h2>
                    }
                    else
                    {
                        <h2><i class="fa fa-comments txt-color-white"></i> My Documents </h2><a class="btn btn-primary float-right" href="/File/CreateDocument?productId=@Model.FirstOrDefault().ProductId">Create New Document</a>
                    }                    
                </span>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Product</th>
                            <th>Type</th>
                            <th>Owner</th>
                            <th>Actions</th>
                            <th>Downloads</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model)
                        {
                            <tr>
                                <td>@doc.DisplayName</td>
                                <td>@doc.ProductName</td>
                                <td>@doc.Type</td>
                                <td>@doc.Owner</td>
                                <td>
                                    @if (User.HasClaim("EditManageDocuments", "EditManageDocuments"))
                                    {
                                        @if (productId == "")
                                        {
                                            <a class="btn btn-primary btn-xs" href="/File/CreateDocument?id=@doc.Id"><i class="fa fa-edit"></i> Edit</a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-primary btn-xs" href="/File/CreateDocument?id=@doc.Id&productId=@doc.ProductId"><i class="fa fa-edit"></i> Edit</a>
                                        }                                        
                                    }                            
                                    <a class="btn btn-danger btn-xs" href="/File/DeleteDocument?id=@doc.Id"><i class="fa fa-trash"></i> Delete</a>                                
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-xs" href="/File/GetDocument/@(doc.Id)"><i class="fa fa-download"></i> Get Html</a>
                                    <a class="btn btn-primary btn-xs" href="/File/GetDocument/@(doc.Id)?format=docx"><i class="fa fa-download"></i> Get Docx</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>