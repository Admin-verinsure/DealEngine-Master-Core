@{
    // Set no fixed header
    string fixedHeader = string.Empty;
    string fixedFooter = string.Empty;
    string currentTheme = string.Empty;

    // If authenticated, set fixed header. The log on page does
    // not like the fixed header attributes for some reason
    if (User.Identity.IsAuthenticated)
    {
        // Set fixed header and fixed navigation
        fixedHeader = "fixed-header fixed-navigation";
        fixedFooter = "fixed-page-footer";
        currentTheme = "smart-style-3";
    }
}
<!DOCTYPE html>
<html lang="en-us" id="@ViewBag.PageId" class="">
<head>
    <meta charset=" utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title> @ViewBag.Title </title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <!-- Basic Styles -->
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/your_style.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/font-awesome.min.css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/smartadmin-production-plugins.min.css">
    <link href="~/smartwizard/css/smart_wizard_theme_circles.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/smartadmin-rtl.min.css">
    <!-- FAVICONS -->
    <link rel="shortcut icon" href="~/Content/img/favicon/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Content/img/favicon/favicon.ico" type="image/x-icon">
    <!-- GOOGLE FONT -->
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700">
    <link rel="apple-touch-icon" href="~/Content/img/splash/sptouch-icon-iphone.png">
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/img/splash/touch-icon-ipad.png">
    <link rel="apple-touch-icon" sizes="120x120" href="~/Content/img/splash/touch-icon-iphone-retina.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/Content/img/splash/touch-icon-ipad-retina.png">
    <!-- iOS web-app metas : hides Safari UI Components and Changes Status Bar Appearance -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- Startup image for web apps -->
    <link rel="apple-touch-startup-image" href="~/Content/img/splash/ipad-landscape.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:landscape)">
    <link rel="apple-touch-startup-image" href="~/Content/img/splash/ipad-portrait.png" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:portrait)">
    <link rel="apple-touch-startup-image" href="~/Content/img/splash/iphone.png" media="screen and (max-device-width: 320px)">
    <link href="~/bootstrap-multiselect/css/bootstrap-multiselect.css" rel="stylesheet" />
    <!--JQuery-->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/Scripts/plugin/jquery-validate/jquery.validate.min.js" defer></script>
    <script src="~/jqueryui/jquery-ui.min.js"></script>
    <!-- Bootstrap Datatable -->
    <script src="~/lib/bootstrap/bootstrap-table/bootstrap-table.min.js"></script>
    <link href="~/lib/bootstrap/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/bootstrap-table/extensions/page-jump-to/bootstrap-table-page-jump-to.min.js"></script>
    <link href="~/lib/bootstrap/bootstrap-table/extensions/page-jump-to/bootstrap-table-page-jump-to.min.css" rel="stylesheet" />

    <script src="~/lib/popper.js/umd/popper.js"></script>
    <link href="~/css/bootstrap-chosen.min.css" rel="stylesheet" />
    <script src="~/Scripts/plugin/chosen/chosen.jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/bootstrap-multiselect/js/bootstrap-multiselect.js"></script>
    <script src="~/smartwizard/js/jquery.smartWizard.min.js"></script>
</head>
<body class="container-fluid">

    @{ await Html.RenderPartialAsync("_Header", RenderSection("topright", false)); }

    <div id="body" class="container-fluid" style="background-color: #f3f0f0">
        @RenderBody()
        <footer>
            <p style="vertical-align:central">&copy; 2019 - DealEngine</p>
        </footer>
    </div>

    @{ await Html.RenderPartialAsync("_Scripts", RenderSection("pagespecific", false)); }
</body>

</html>