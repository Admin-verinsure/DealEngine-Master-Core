@model DealEngine.WebUI.Models.Organisation.AttachOrganisationViewModel
<div id="content" class="container">

    <div class="card">
        <div class="card-header">
            Attach Advisor
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(m => m.Owners, new { @class = "label required" })
                <select name="OwnerId" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                    @foreach (var option in Model.Owners)
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RemovedOrganisations, new { @class = "label required" })
                <select name="RemovedId" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                    @foreach (var option in Model.RemovedOrganisations)
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                </select>
            </div>

        </div>
    </div>
</div>
