@model DealEngine.WebUI.Models.UpdateTypesViewModel
<!-- MAIN CONTENT -->
<div id="content" class="container">

    <div class="form-group">
        <h1 class="page-title txt-color-blueDark">
            <!-- PAGE HEADER -->
            <i class="fa-fw fa fa-home"></i>  <span>
                <a href="~/Programme/TermSheetConfirguration/@Model.Id">Package Term Sheet</a>
                > Assign Programme To Update Types
            </span>
        </h1>
    </div>
    <div class="form-group">
        <span>
            <a class="btn btn-primary btn-xs text-white" onclick="location.href='@Url.Action("TermSheetConfirguration", "Programme",new { Id =@Model.Id })'" id="backbutton"><i class="fa fa-home"></i> Back </a>
        </span>
    </div>

    <div class="form-group">
        <div class="card">
            <div class="card-header">
                <span class="widget-icon">
                    <h2><i class="fa fa--envelope"></i>Programme Update Type Templates </h2>
                </span>
            </div>
            <div class="card-body">
                <div class="container">
                    <form method="POST" action="~/Home/IssueUIS" novalidate>
                        @*<input type="text" class="form-control" value="@Model.ProgrammeId" id="programmeId" name="ProgrammeId" hidden>*@
                        <div class="card">
                            <div class="card-header">
                                <h5>
                                    This page lists of Update Types. Please select the Update Type to assign this particular programme.
                                </h5>
                            </div>
                            <div class="card-body">
                                <table class="container">
                                    <thread>
                                        <tr>
                                            <th>
                                                <input type="checkbox" id="select-all" aria-label="checkbox button for following text input">

                                                Update Type Name
                                            </th>
                                            <th>
                                                Update Type Value
                                            </th>
                                            @*<th>
                                                Issued Date
                                            </th>*@
                                        </tr>
                                    </thread>
                                    <tbody>

                                        @if (Model.CurrentUserType == "TC")
                                        {
                                            @foreach (var updateType in Model.UpdateTypes.Where(t => t.TypeIsTc))
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <div class="input-group-text">
                                                                    @*<input type="checkbox" aria-label="checkbox button for following text input" name="@clientProg.Owner.Email" value="@updateType.Id">*@
                                                                    <input type="checkbox" aria-label="checkbox button for following text input" name="@updateType.NameType" value="@updateType.Id">
                                                                </div>
                                                            </div>
                                                            <input type="text" class="form-control" aria-label="Text input with radio button" value="@updateType.NameType" readonly>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <input type="text" class="form-control" value="@updateType.ValueType" readonly>
                                                    </td>
                                                    @*<td>
                        <input type="text" class="dateInput form-control" value="@clientProg.IssueDate" readonly>
                    </td>*@
                                                    @*<td>
                        <input type="text" class="dateInput form-control" value="@Model.IsSubUIS" name="IsSubUIS" readonly>
                    </td>*@
                                                </tr>
                                            }

                                        }

                                        </tbody>
                                </table>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-primary btn-xs" type="submit">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section pagespecific {
    <script type="text/javascript">


        $('#select-all').on('click', function () {
            debugger;
            // Get all rows with search applied
            // Check/uncheck checkboxes for all rows in the table
            $('input[type="checkbox"]').prop('checked', this.checked);


        });

    </script>

}
