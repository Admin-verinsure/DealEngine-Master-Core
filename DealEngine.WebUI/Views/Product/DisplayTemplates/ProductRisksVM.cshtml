@model DealEngine.WebUI.Models.ProductModels.ProductRisksVM

	<br/>
	<h3><strong>Covers </strong> - Select lines</h3>
	<div class="row">
		<div class="col-sm-12">
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th>Cover All</th>
						<th>Cover Loss</th>
						<th>Cover Interruption</th>
						<th>Cover Third Party</th>
					</tr>
				</thead>
				<tbody>
					@for( int i = 0; i < Model.Count(); ++i)
					{
					<tr>
						<td>@Html.DisplayFor(m => m[i].Insured)</td>
						<td>@Html.HiddenFor(m => m[i].Id)</td>
						<td>
                            <div class="smart-form">
                                @Html.CheckBoxFor(m => m[i].CoverAll)
                                <i></i>Cover All
                            </div>
						</td>
						<td>
                            <div class="smart-form">
                                @Html.CheckBoxFor(m => m[i].CoverLoss)
                                <i></i>Cover Loss
                            </div>
						</td>
						<td>
                            <div class="smart-form">
                                @Html.CheckBoxFor(m => m[i].CoverInterruption)
                                <i></i>Cover Interruption
                            </div>
						</td>
						<td>
                            <div class="smart-form">
                                @Html.CheckBoxFor(m => m[i].CoverThirdParty)
                                <i></i>Cover Third Party
                            </div>
						</td>
					</tr>
					}
				</tbody>
			</table>
