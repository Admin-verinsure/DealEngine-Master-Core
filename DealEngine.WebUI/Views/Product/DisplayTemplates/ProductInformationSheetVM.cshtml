@model DealEngine.WebUI.Models.Product.ProductInformationSheetVM

<fieldset>
	<div class="alert alert-info fade in">
        <i class="fa-fw fa fa-info"></i>
        <strong>Note:</strong> Only Information Sheets that belong to your primary Organisation will be shown here.
    </div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Select an Information Sheet for this product</label>
        <div class="col-sm-10">
        	@* This helper function renders out the 'input-group' div automatically, no need to manually add it *@
	        @Html.DropDownListFor(m => m.SelectedInformationSheet, Model.InformationSheets)
            <span class="help-block">Only Information Sheets that belong to your primary Organisation will be shown here.</span>
        </div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Select Policy Documents for this product</label>
		<div class="col-sm-10">
			@* Select policy documents here *@
			    <select class="form-control" id="multi-product-documents" multiple="multiple">

				</select>
		</div>
	</div>
</fieldset>