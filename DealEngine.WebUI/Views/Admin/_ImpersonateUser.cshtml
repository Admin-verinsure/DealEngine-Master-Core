@model DealEngine.WebUI.Models.AdminViewModel

<div class="card">
    <div class="card-header">
        <span class="widget-icon"> <i class="fa fa-desktop text-white"></i> </span>
        <h2> Impersonate User </h2>
    </div>
    <div class="card-body">
        <form action="ImpersonateUser" method="post">
            <div class="form-group">
                <select class="form-control" name="username">
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.UserName">@user.UserName - @user.Email</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <button class="btn btn-sm btn-success" type="submit">
                    Impersonate User
                </button>
            </div>
        </form>
    </div>
</div>