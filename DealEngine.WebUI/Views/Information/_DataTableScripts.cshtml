    function Cancel(Form, Tab) {
        document.getElementById(Form).reset();
        SetCurrentTab(Tab);
    }

    function ResetFormView(Form, AddTabId, EditTabId, ButtonId) {
        var editTabHTML = document.getElementById(EditTabId);
        if (editTabHTML.children.length != 0) {
            document.getElementById(Form).reset();
            var addTabHTML = document.getElementById(AddTabId);
            addTabHTML.innerHTML = editTabHTML.innerHTML;
            editTabHTML.innerHTML = "";
            document.getElementById(ButtonId).innerText = "Add";
        }
    }

    function CloneFormView(AddTabId, EditTabId, ButtonId) {
        var editTabHTML = document.getElementById(EditTabId);
        var addTabHTML = document.getElementById(AddTabId);  
        document.getElementById(ButtonId).innerText = "Update";

        editTabHTML.innerHTML = addTabHTML.innerHTML;
        addTabHTML.innerHTML = "";
    }

