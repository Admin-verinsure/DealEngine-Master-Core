                    <div class="col-9">
                        <label for="hasjurisdiction" class="label required">
                            USA/Canada Jurisdiction
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hasjurisdiction" name="PIViewModel.HasJurisdictionOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
