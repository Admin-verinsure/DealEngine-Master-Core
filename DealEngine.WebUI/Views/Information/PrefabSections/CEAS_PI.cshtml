                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-6">
                    <label class="label">
                        Do you require the following Professional Indemity insurance for the extensions to the insurance:
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="haslossdocuments" class="label required">
                            Loss of Documents (including Computer System Records)
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="haslossdocuments" name="PIViewModel.HasLossDocumentsOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasLossDocumentsOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hasemployeefidelity" class="label required">
                            Employees Fidelity
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hasemployeefidelity" name="PIViewModel.HasEmployeeFidelityOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasEmployeeFidelityOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hasdishonesty" class="label required">
                            Dishonesty of Principals/Directors
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hasdishonesty" name="PIViewModel.HasDishonestyOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasDishonestyOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
