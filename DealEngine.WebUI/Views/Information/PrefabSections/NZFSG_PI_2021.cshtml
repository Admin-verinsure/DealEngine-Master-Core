@model DealEngine.WebUI.Models.InformationViewModel

    <form id="PIViewModel" class="is-valid" data-accordianId="Professional Indemnity">
        <div class="form-group">
            <div class="row">
                <div class="col-9">
                    <label for="hasmortage" class="label required">
                        Do you undertake all Mortgage and Insurance brokering in compliance with the NZ Financial Services Group and Loan Market Adviser Agreements?
                    </label>
                </div>
                <div class="col-3">
                    <select id="hasmortage" name="PIViewModel.HasMortageOptions" class="custom-select" onchange="OnChange(this.id, this.name)" data-rule="Reverse" required>
                        @foreach (var option in Model.PIViewModel.HasMortageOptions)
                        {
                            <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div id="PIViewModel.HasMortageOptions" hidden>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="mortagedetails" class="label required">
                            You have answered "No", please name Insurer/Bank and state whether a formal agency or agreement exists:
                        </label>
                    </div>
                    <div class="col-3">
                        @Html.TextBoxFor(m => m.PIViewModel.MortageDetails, new { @class = "form-control", @id = "mortagedetails", @type = "text", onchange = "OnChange(this.id, this.name)" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-9">
                    <label for="hasbusinesschanges" class="label required">
                        Are any changes to your company or business expected in the next 12 months?
                    </label>
                </div>
                <div class="col-3">
                    <select id="hasbusinesschanges" name="PIViewModel.HasBusinessChangesOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                        @foreach (var option in Model.PIViewModel.HasBusinessChangesOptions)
                        {
                            <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div id="PIViewModel.HasBusinessChangesOptions" hidden>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="businesschangesdetails" class="label required">
                            You have answered "Yes" above, please provide futher details:
                        </label>
                    </div>
                    <div class="col-3">
                        @Html.TextBoxFor(m => m.PIViewModel.BusinessChangesDetails, new { @class = "form-control", @id = "businesschangesdetails", @type = "text", onchange = "OnChange(this.id, this.name)" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-9">
                    <label for="hasexistingpolicy" class="label required">
                        Is this a renewal of an existing policy placed with @Model.ProgNamedPartyName ?
                    </label>
                </div>
                <div class="col-3">
                    <select id="hasexistingpolicy" name="PIViewModel.HasExistingPolicyOptions" class="custom-select" onchange="OnChange(this.id, this.name)" data-rule="Reverse" required>
                        @foreach (var option in Model.PIViewModel.HasExistingPolicyOptions)
                        {
                            <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div id="PIViewModel.HasExistingPolicyOptions" hidden>
            <h3 style="font-size:15px;font-weight:bold;color:black">Details of Previous Insurance</h3>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="coveramount" class="label required">
                            $ Amount of Cover:
                        </label>
                    </div>
                    <div class="col-3">
                        @Html.TextBoxFor(m => m.PIViewModel.CoverAmount, new { @class = "form-control", @id = "coveramount", @type = "number", onchange = "OnChange(this.id, this.name)", @required = "" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="datelapsed" class="label required">
                            When Lapsed:
                        </label>
                    </div>
                    <div class="col-3">
                        @Html.TextBoxFor(m => m.PIViewModel.DateLapsed, new { @class = "form-control", @id = "datelapsed", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="insurername" class="label required">
                            Name of Insurer:
                        </label>
                    </div>
                    <div class="col-3">
                        @Html.TextBoxFor(m => m.PIViewModel.InsurerName, new { @class = "form-control", @id = "insurername", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="retroactivedate" class="label required">
                            Retroactive date:
                        </label>
                    </div>
                    <div class="col-3">
                        @Html.TextBoxFor(m => m.PIViewModel.RetroactiveDate, new { @class = "form-control", @id = "retroactivedate", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-9">
                    <label for="hasexistingpolicy" class="label required">
                        Are you aware of any parties to this policy being a member of :
                    </label>
                </div>
                <div class="col-3">
                    <select id="hasexistingpolicy" name="PIViewModel.HasPartyMembers" class="custom-select" onchange="OnChange(this.id, this.name)" data-rule="Reverse" required>
                        @foreach (var option in Model.PIViewModel.HasPartyMembers)
                        {
                            <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-9">
                    <label for="insurername" class="label required">
                        Are you aware of any other PI insurances held for any of the parties to this policy?
                    </label>
                </div>
                <div class="col-3">
                    <select id="hasexistingpolicy" name="PIViewModel.HasOtherPIinsurances" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                        @foreach (var option in Model.PIViewModel.HasOtherPIinsurances)
                        {
                            <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="row">
                <div class="col-9">
                    <label for="hasexistingpolicy" class="label required">
                        What class of license are you intending to apply for?
                    </label>
                </div>
                <div class="col-3">
                    <select id="hasexistingpolicy" name="PIViewModel.HasClassOfLicense" class="custom-select" onchange="OnChange(this.id, this.name)" data-rule="Reverse" required>
                        @foreach (var option in Model.PIViewModel.HasClassOfLicense)
                        {
                            <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>

    </form>
