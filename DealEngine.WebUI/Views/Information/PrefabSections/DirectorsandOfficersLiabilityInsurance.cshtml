@model DealEngine.WebUI.Models.InformationViewModel

    <div>
        <form id="DAOLIViewModel" class="needs-validation" data-accordianId="Directors and Officers Liability Insurance">
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label for="HasDAOLI" class="label required">
                            Would you like Directors' and Officers' Liability Insurance?
                        </label>
                    </div>
                    <div class="col-6">
                        <select id="HasDAOLI" name="DAOLIViewModel.HasDAOLIOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.DAOLIViewModel.HasDAOLIOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div id="DAOLIViewModel.HasDAOLIOptions" hidden>
                <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            <label for="hasdebts" class="label required">
                                Are you currently able to meet your debts as they fall due?
                            </label>
                        </div>
                        <div class="col-6">
                            <select id="hasdebts" name="DAOLIViewModel.HasDebtsOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                                @foreach (var option in Model.DAOLIViewModel.HasDebtsOptions)
                                {
                                    <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            <label for="hasexistingpolicy" class="label required">
                                Is this a renewal of an existing policy placed with @Model.Name ?
                            </label>
                        </div>
                        <div class="col-6">
                            <select id="hasexistingpolicy" name="DAOLIViewModel.HasExistingPolicyOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                                @foreach (var option in Model.DAOLIViewModel.HasExistingPolicyOptions)
                                {
                                    <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div id="DAOLIViewModel.HasExistingPolicyOptions" hidden>
                    <h3 style="font-size:15px;font-weight:bold;color:black">Details of Previous Insurance</h3>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-9">
                                <label for="coveramount" class="label required">
                                    $ Amount of Cover:
                                </label>
                            </div>
                            <div class="col-3">
                                @Html.TextBoxFor(m => m.DAOLIViewModel.CoverAmount, new { @class = "form-control", @id = "coveramount", @type = "number", onchange = "OnChange(this.id, this.name)", @required = "" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-9">
                                <label for="datelapsed" class="label required">
                                    When Lapsed:
                                </label>
                            </div>
                            <div class="col-3">
                                @Html.TextBoxFor(m => m.DAOLIViewModel.DateLapsed, new { @class = "form-control", @id = "datelapsed", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-9">
                                <label for="insurername" class="label required">
                                    Name of Insurer:
                                </label>
                            </div>
                            <div class="col-3">
                                @Html.TextBoxFor(m => m.DAOLIViewModel.InsurerName, new { @class = "form-control", @id = "insurername", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-9">
                                <label for="retroactivedate" class="label required">
                                    Retroactive date:
                                </label>
                            </div>
                            <div class="col-3">
                                @Html.TextBoxFor(m => m.DAOLIViewModel.RetroactiveDate, new { @class = "form-control", @id = "retroactivedate", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>