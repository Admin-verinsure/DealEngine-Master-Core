@model DealEngine.WebUI.Models.InformationViewModel

    <form id="PIViewModel" class="is-valid">
        <div class="form-group">
            <div class="row">
                <div class="col-9">
                    <label for="HasDANZ" class="label required">
                        Are you a current member of DANZ?
                    </label>
                </div>
                <div class="col-3">
                    <select id="HasDANZ" name="PIViewModel.HasDANZOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                        @foreach (var option in Model.PIViewModel.HasDANZOptions)
                        {
                            <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div id="PIViewModel.HasDANZOptions" hidden>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hassalesrelate" class="label required">
                            Does any part of the gross fees / gross sales figures relate to the sale, design and construction of physical products or buildings?
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hassalesrelate" name="PIViewModel.HasSalesRelateOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasSalesRelateOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div id="PIViewModel.HasSalesRelateOptions" hidden>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="percentfees" class="label required">
                                If "Yes", please state the percentage of gross fees / gross sales derived from the sale, design and construction of physical products or buildings:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextBoxFor(m => m.PIViewModel.PercentFees, new { @class = "form-control", @id = "percentfees", @type = "number", onchange = "OnChange(this.id, this.name)" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="percentdetails" class="label required">
                                If "Yes", please state the percentage of gross fees / gross sales derived from the sale, design and construction of physical products or buildings:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextAreaFor(m => m.PIViewModel.PercentDetails, new { @class = "form-control", @id = "percentdetails", @type = "text", onchange = "OnChange(this.id, this.name)" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hassubstantialchange" class="label required">
                            Do you expect any substantial change in the percentages given above in the forthcoming year?
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hassubstantialchange" name="PIViewModel.HasSubstantialChangeOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasSubstantialChangeOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div id="PIViewModel.HasSubstantialChangeOptions" hidden>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="substantialchangedetails" class="label required">
                                If "Yes", please give full details:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextAreaFor(m => m.PIViewModel.SubstantialChangeDetails, new { @class = "form-control", @id = "substantialchangedetails", @type = "text", onchange = "OnChange(this.id, this.name)" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label>
                        <strong>
                            Weathertightness Leaky Buildings Restricted Cover - Higher Limit
                        </strong>
                    </label>
                </div>
                <div class="row">
                    <label>
                        Option to increase the sub limits under the Weathertightness endorsement for additional premium of $300+GST.
                    </label>
                </div>
                <div class="row">
                    <label>
                        This Optional extension will increase the sub limit of cover from $50,000 for settlement plus $50,000 defence costs to $125,000 for settlement plus $125,000 defence costs and The ‘new build’ sub limit from $125,000 for settlement and $125,000 for defence cost to $250,000 for settlement and $250,000 for defence cost.
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hasleakybuildingcover" class="label required">
                            Would you like the Weathertightness Leaky Buildings Restricted Cover?
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hasleakybuildingcover" name="PIViewModel.HasLeakyBuildingCoverOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasLeakyBuildingCoverOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hasriskmanagement" class="label required">
                            Please indicate which of the following you carry out:
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hasriskmanagement" name="PIViewModel.HasRiskManagementOptions" multiple class="chosen-select custom-select b" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasRiskManagementOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hasretaineddocument" class="label required">
                            Do you have a business process to ensure that records are retained of all relevant client information and documentation provided to clients and prospective clients?
                            For example: letters of engagement, meeting notes, telephone filenotes, completed proposals, quotations etc.
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hasretaineddocument" name="PIViewModel.HasRetainedDocumentOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasRetainedDocumentOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hascomplaint" class="label required">
                            Do you have a complaints process that if a client complains, relevant factors are promptly considered and documents, including:
                            <br />
                            <span>
                                Documenting the complaint to the Client
                            </span>
                            <br />
                            <span>
                                Whether a conflict of interest has arisen
                            </span>
                            <br />
                            <span>
                                Whether you should notify your Broker/Insurer
                            </span>
                            <br />
                            <span>
                                Whether the complaint's impact can be minimised
                            </span>
                            <br />
                            <span>
                                Whether reputational risk ia a factor
                            </span>
                            <br />
                            <span>
                                Whether another party or the Client might have contributed to the problem
                            </span>
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hascomplaint" name="PIViewModel.HasComplaintAlternativeOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasComplaintAlternativeOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hascircumstancearise" class="label required">
                            When a circumstance arises that might give rise to a claim, do you have a business process to ensure that the matter is promptly reported to your broker/insurer and in accordance with your insurance policy?
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hascircumstancearise" name="PIViewModel.HasCircumstanceAriseOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasCircumstanceAriseOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>       
    </form>