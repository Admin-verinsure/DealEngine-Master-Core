@model DealEngine.WebUI.Models.InformationViewModel

    <form id="GLViewModel" class="is-valid" data-accordianId="General Liability Insurance">
        <div class="form-group">
            <div class="row">
                <div class="col-12">
                    <label class="label">
                        Claims by Third Parties alleging physical loss or damage to property, or bodily injury not covered by the Accident Insurance Act 1998, including any punitive and exemplary damages in New Zealand.
                    </label>
                </div>                
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-9">
                    <label for="HasGL" class="label required">
                        Would you like General Liability Insurance?
                    </label>
                </div>
                <div class="col-3">
                    <select id="HasGL" name="GLViewModel.HasGLOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                        @foreach (var option in Model.GLViewModel.HasGLOptions)
                        {
                            <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div id="GLViewModel.HasGLOptions" hidden>
            
            <div class="form-group">
                <div class="row">
                    <div class="col-12">
                        <label class="label">
                            Please give details of any of the following which are used or for which the practice is responsible, in the course of the business:
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="equipmentdetails" class="label">
                            Passener or goods elevators, escalators, hoist, cranes or other lifting equipment
                        </label>
                    </div>
                    <div class="col-3">
                        @Html.TextAreaFor(m => m.GLViewModel.EquipmentDetails, new { @class = "form-control", @id = "alternativelimit", @type = "text"})
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="vehicledetails" class="label">
                            Unregistered mechanically propelled vehicles
                        </label>
                    </div>
                    <div class="col-3">
                        @Html.TextAreaFor(m => m.GLViewModel.VehicleDetails, new { @class = "form-control", @id = "vehicledetails", @type = "text" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="carparkdetails" class="label">
                            Car Parks
                        </label>
                    </div>
                    <div class="col-3">
                        @Html.TextAreaFor(m => m.GLViewModel.CarParkDetails, new { @class = "form-control", @id = "carparkdetails", @type = "text"})
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-12">
                        <label for="carparkdetails" class="label required">
                            <strong>Coverage for liability, assumed under any contract or agreement, is limited to lease liability or liability under warranty of fitness or quality in regards to products or contracts that have been made known to Insurers.</strong>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hasassumeliability" class="label required">
                            Does the practice assume liability under any contract; provide "indemnity" to or "hold harmless" any other parties in respect of any general and products liabilities?
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hasassumeliability" name="GLViewModel.HasAssumeLiabilityOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.GLViewModel.HasAssumeLiabilityOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div id="GLViewModel.HasAssumeLiabilityOptions" hidden>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="assumeliabilitydetails" class="label required">
                                Please provide details:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextAreaFor(m => m.GLViewModel.AssumeLiabilityDetails, new { @class = "form-control", @id = "assumeliabilitydetails", @type = "text", onchange = "OnChange(this.id, this.name)" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hasexistingGLpolicy" class="label required">
                            Is this a renewal of an existing policy placed with @Model.Name ?
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hasexistingGLpolicy" name="GLViewModel.HasExistingPolicyOptions" class="custom-select" onchange="OnChange(this.id, this.name)" data-rule="Reverse" required>
                            @foreach (var option in Model.GLViewModel.HasExistingPolicyOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div id="GLViewModel.HasExistingPolicyOptions" hidden>
                <h3 style="font-size:15px;font-weight:bold;color:black">Details of Previous Insurance</h3>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="coveramount" class="label required">
                                $ Amount of Cover:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextBoxFor(m => m.GLViewModel.CoverAmount, new { @class = "form-control", @id = "coveramount", @type = "number", onchange = "OnChange(this.id, this.name)", @required = "" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="datelapsed" class="label required">
                                When Lapsed:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextBoxFor(m => m.GLViewModel.DateLapsed, new { @class = "form-control", @id = "datelapsed", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="insurername" class="label required">
                                Name of Insurer:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextBoxFor(m => m.GLViewModel.InsurerName, new { @class = "form-control", @id = "insurername", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="retroactivedate" class="label required">
                                Retroactive date:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextBoxFor(m => m.GLViewModel.RetroactiveDate, new { @class = "form-control", @id = "retroactivedate", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>