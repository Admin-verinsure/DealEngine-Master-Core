        $.ajax({
            url: '@Url.Action("GetDirectorsandOfficersLiability", "Information")',
            type: "POST",
            data: postData
        })
            .done(function (data) {
                var valid = "true";
                var count = 0;
                for (var i = 0; i < data.length - 6; i++) {
                    if (data[i] == null) {
                        if (valid) {
                            valid = "false";
                        }
                    }
                }                
                if (data[0] != "" && valid == "true") {
                    for (var item = 0; item < data.length; item++){
                        var arr = data[item];                        
                        if (arr != null) {
                            $('#' + arr[count]).val(arr[count + 1]);
