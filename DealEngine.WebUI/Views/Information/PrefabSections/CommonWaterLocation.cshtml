            if (validity) {
                validity = false;
            }
        } else {
            $('#validateMarinaLocSec').html("<i></i>");
        }
        if (mooringTypeModal == "") {
            $('#validateMooringType').html("<font color='red'>Field is required</font>")
            if (validity) {
                validity = false;
            }
        } else {
            $('#validateMooringType').html("<i></i>");
        }

        if (validity) {
            AddWaterLocation(tabId, tableId);
            SetCurrentTab(currenttab);
        } else {
            return validity;
        }

    }

