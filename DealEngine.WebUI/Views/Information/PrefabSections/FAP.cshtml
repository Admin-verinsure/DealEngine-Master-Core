@model DealEngine.WebUI.Models.InformationViewModel

    <form id="FAPViewModel" class="is-valid" data-accordianId="FAP">
          @{
              var objectType = Model.ClientProgramme.GetType();
              if (!objectType.IsSubclassOf(typeof(ClientProgramme)))
              {
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="hastraditionallicence" class="label required">
                                If not 15 March 2021, when do you want this cover to start?
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextBoxFor(m => m.FAPViewModel.CoverStartDate, new { @class = "form-control", @id = "FAPCoverStartDate", @required = "", @onchange = "OnChange(this.id, this.name)", @type="text"})
                        </div>
                    </div>
                </div>
              };
           }

            <div class="form-group">
                <div class="row">
                    <div class="col-9">
                        <label for="hastraditionallicence" class="label required">
                            Are you coming under your own Transitional Licence?
                        </label>
                    </div>
                    <div class="col-3">
                        <select id="hastraditionallicence" name="FAPViewModel.HasTraditionalLicenceOptions" class="custom-select" data-rule="FABConditional" data-item="FAB.HasAdvisersOptions,FAB.HasAdditionalTraditionalLicenceOptions" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.FAPViewModel.HasTraditionalLicenceOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div id="FAB.HasAdvisersOptions" hidden>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="hasadvisers" class="label required">
                                Please select from the following options
                            </label>
                        </div>
                        <div class="col-3">
                            <select id="hasadvisers" name="FAPViewModel.HasAdvisersOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                                @foreach (var option in Model.FAPViewModel.HasAdvisersOptions)
                                {
                                    <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="transitionallicensenum" class="label required">
                                If you have you transitional license number available please enter it here
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextAreaFor(m => m.FAPViewModel.TransitionalLicenseNum, new { @class = "form-control", @id = "transitionallicensenum", @type = "text", onchange = "OnChange(this.id, this.name)" })
                        </div>
                    </div>
                </div>
            </div>
            <div id="FAB.HasAdditionalTraditionalLicenceOptions" hidden>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="hasadditionaltraditionallicence" class="label required">
                                Please select from the following options
                            </label>
                        </div>
                        <div class="col-3">
                            <select id="hasadditionaltraditionallicence" name="FAPViewModel.HasAdditionalTraditionalLicenceOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                                @foreach (var option in Model.FAPViewModel.HasAdditionalTraditionalLicenceOptions)
                                {
                                    <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

            </div>
        </form>
