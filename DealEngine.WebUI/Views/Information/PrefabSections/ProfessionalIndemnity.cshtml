@model DealEngine.WebUI.Models.InformationViewModel


        <form id="PIViewModel" class="is-valid" data-accordianId="Professional Indemnity">
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label for="HasAluminium" class="label required">
                            Have you specified Aluminium Composite Panel on any building?
                        </label>
                    </div>
                    <div class="col-6">
                        <select id="HasAluminium" name="PIViewModel.HasAluminium" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasAluminium)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label for="haspracticeclaim" class="label required">
                            Are you aware of any circumstance that has occurred in your practice or any previous practice which may give rise to a claim that has not previously been reported to @Model.ProgNamedPartyName  or any Insurer?
                        </label>
                    </div>
                    <div class="col-6">
                        <select id="haspracticeclaim" name="PIViewModel.HasPracticeClaimOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasPracticeClaimOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label for="hasdispute" class="label required">
                            Are you aware of any dispute between third parties concerning work with which your practice was involved, which may give rise to a claim?
                        </label>
                    </div>
                    <div class="col-6">
                        <select id="hasdispute" name="PIViewModel.HasDisputeOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasDisputeOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label for="hasdispute2" class="label required">
                            Are you aware of any dispute between any third party and any other party for whose activities you may be vicariously liable (e.g. a contractor), which may involve you in a claim?
                        </label>
                    </div>
                    <div class="col-6">
                        <select id="hasdispute2" name="PIViewModel.HasDisputeOptions2" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasDisputeOptions2)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label for="hasthirdparty" class="label required">
                            Are you aware of any third party intimation that you might be held liable in part or in whole for any loss?
                        </label>
                    </div>
                    <div class="col-6">
                        <select id="hasthirdparty" name="PIViewModel.HasThirdPartyOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasThirdPartyOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label for="hascomplaint" class="label required">
                            Are you aware of any complaints made against your practice or any individual person, either a principal or employee to any professional body?
                        </label>
                    </div>
                    <div class="col-6">
                        <select id="hasthirdparty" name="PIViewModel.HasComplaintOptions" class="custom-select" onchange="OnChange(this.id, this.name)" required>
                            @foreach (var option in Model.PIViewModel.HasComplaintOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <label for="hasexistingpolicy" class="label required">
                            Is this a renewal of an existing policy placed with @Model.ProgNamedPartyName ?
                        </label>
                    </div>
                    <div class="col-6">
                        <select id="hasexistingpolicy" name="PIViewModel.HasExistingPolicyOptions" class="custom-select" onchange="OnChange(this.id, this.name)" data-rule="Reverse" required>
                            @foreach (var option in Model.PIViewModel.HasExistingPolicyOptions)
                            {
                                <option selected="@option.Selected" value="@option.Value">@option.Text</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div id="PIViewModel.HasExistingPolicyOptions" hidden>
                <h3 style="font-size:15px;font-weight:bold;color:black">Details of Previous Insurance</h3>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="coveramount" class="label required">
                                $ Amount of Cover:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextBoxFor(m => m.PIViewModel.CoverAmount, new { @class = "form-control", @id = "coveramount", @type = "number", onchange = "OnChange(this.id, this.name)", @required = "" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="datelapsed" class="label required">
                                When Lapsed:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextBoxFor(m => m.PIViewModel.DateLapsed, new { @class = "form-control", @id = "datelapsed", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="insurername" class="label required">
                                Name of Insurer:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextBoxFor(m => m.PIViewModel.InsurerName, new { @class = "form-control", @id = "insurername", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "", @maxlength = "250", @placeholder = "Max characters is 250. Over 250 will not be stored." })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-9">
                            <label for="retroactivedate" class="label required">
                                Retroactive date:
                            </label>
                        </div>
                        <div class="col-3">
                            @Html.TextBoxFor(m => m.PIViewModel.RetroactiveDate, new { @class = "form-control", @id = "retroactivedate", @type = "text", onchange = "OnChange(this.id, this.name)", @required = "" })
                        </div>
                    </div>
                </div>
            </div>
        </form>
