                var postData = { Reportstr: reportstr , ClientProgrammeId : "@Model.ClientProgramme.Id"};

                  $.ajax({
                                url: '@Url.Action("SavePDFFile", "File")',
                                type: "POST",
                                data: postData
                  })
                              .done(function (data) {
                                  $("#Pdfreport").attr("href", "/File/GetPDF?Id=" + data + "&ClientProgrammeId=" + "@Model.ClientProgramme.Id");
