@model DealEngine.WebUI.Models.Authorization.AuthorizeViewModel
<div class="container-fluid">
    <div class="row">
        <div class="accordion container" id="accordionExample">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Roles
                        </button>
                    </h2>
                </div>
                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                    <div class="card-body">
                        <div class="container" id="AddRoleForm">
                            <form>
                                @if (User.IsInRole("TCUser"))
                                {
                                    <div class="form-group container">
                                        <select class="custom-select col-6 custom-select-lg" id="organisationId">
                                            <option value="" selected>empty</option>
                                            @foreach (var org in Model.Organisations)
                                            {
                                                <option value="@org.Id">@org.Name</option>
                                            }
                                        </select>
                                    </div>
                                }
                                <div class="form-group">
                                    @await Html.PartialAsync("AddRoleForm", Model)
                                </div>
                            </form>
                        </div>
                        <div class="card-body">
                            <div class="container" id="UpdateRoleForm" style="display:none">
                                @await Html.PartialAsync("UpdateRoleForm", Model)
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="button" class="btn btn-primary btn-sm" onclick="AddRole()">Add</button>
                                <button type="button" class="btn btn-primary btn-sm" onclick="EditRole()">Update/Edit</button>
                                <button type="button" class="btn btn-primary btn-sm">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingThree">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Claim/Rules
                        </button>
                    </h2>
                </div>
                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                    <div class="card-body">
                        <div class="container">
                            <div class="card">
                                <div class="card-header">
                                    Claims
                                </div>
                                <div class="card-body">
                                    <form class="needs-validation" action="CreateClaim" method="post" id="claimform">
                                        <div class="form-group">
                                            <div class="col-3">
                                                <input type="text" class="form-control" name="type" placeholder="Enter Claim Type" form="claimform"/>
                                            </div>
                                            <div class="col-3">
                                                <input type="text" class="form-control" name="value" placeholder="Enter Claim Value" form="claimform"/>
                                            </div>                                                                                       
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-sm" form="claimform">Submit Query</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingfour">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapsefour" aria-expanded="false" aria-controls="collapsefour">
                            Add User Role
                        </button>
                    </h2>
                </div>
                <div id="collapsefour" class="collapse" aria-labelledby="headingfour" data-parent="#accordionExample">
                    <div class="card-body">
                        <div class="container" id="AddRoleToUserForm">
                            @await Html.PartialAsync("AddRoleToUserForm", Model)
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-primary" onclick="AddRoleToUser()">Add User Permissions</button>
                            <button type="button" class="btn btn-primary">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section pagespecific {
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/css/bootstrap-chosen.min.css" rel="stylesheet" />
    <script type="text/javascript">

        $(document).ready(function () {
            $('#AddClaims').chosen({ width: '100%' });
        });

        $(document).ready(function () {
            $('#UpdateClaims').chosen({ width: '100%' });
        });

        $(document).ready(function () {
            $('#AddUserRoleSelect').chosen({ width: '100%' });
        });

        function ShowClaim() {
            $("#claimList").hide();
        }

        function SaveRole() {
            var roleName = $('#InputRoleName').val();
            var claim = $('#AddClaims').val();
            var organisationId = $('#organisationId').val();
            debugger;
            var postData = { RoleName: roleName, Claims: claim, OrganisationId: organisationId }

            $.ajax({
                url: '@Url.Action("AddRole", "Authorize")',
                type: "POST",
                data: postData
            })
                .done(function (data) {
                    $('#AddRoleForm').hide();
                    location.reload();
                    $('#Success').alert();
                })
                .fail(function (a, s, d) {
                    alert("Unable to save.");
                });
        }

        function UpdateRole() {
            var roleName = $('#UpdateRoleSelect').val();
            var claim = $('#UpdateClaims').val();
            var postData = { RoleName: roleName, Claims: claim }
            debugger;
            $.ajax({
                url: '@Url.Action("UpdateRole", "Authorize")',
                type: "POST",
                data: postData
            })
                .done(function (data) {
                    location.reload();
                    $('#Success').alert();
                })
                .fail(function (a, s, d) {
                    alert("Unable to save.");
                });
        }

        function SaveRoleToUser() {
            var userId = $('#AddUser').val();
            var roleIds = $('#AddUserRoleSelect').val();
            var postData = { UserId: userId, RoleIds: roleIds }

            $.ajax({
                url: '@Url.Action("SaveRoleToUser", "Authorize")',
                type: "POST",
                data: postData
            })
                .done(function (data) {
                    location.reload();
                    $('#Success').alert();
                })
                .fail(function (a, s, d) {
                    alert("Unable to save.");
                });
        }

        function AddRole() {
            $('#AddRoleForm').show();
            $('#UpdateRoleForm').hide();
        }

        function AddRoleToUser() {
            $('#AddRoleToUserForm').show();
        }

        function EditRole() {
            $('#AddRoleForm').hide();
            $('#UpdateRoleForm').show();
        }

    </script>
}